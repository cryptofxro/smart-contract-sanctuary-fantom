import "./interfaces/IRewardPool.sol";
import "./interfaces/IUniswap.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract RewardPool is Ownable, IRewardPool {
    struct NftData {
        uint256 nodeType;
        address owner;
        uint256 lastClaim;
    }

    uint256[5] public rewardRates = [100000e9, 555555e9, 3623188e9, 13333333e9, 30000000e9];
    IUniswapV2Router02 public uniswapV2Router;
    mapping(uint256 => NftData) public nftInfo;
    address public FedInu;
    address public Nodes;
    uint256 totalNodes = 0;

    modifier onlyFedInu() {
        require(msg.sender == FedInu, "Ownable: caller is not the FedInu token");
        _;
    }

    modifier onlyNodes() {
        require(msg.sender == Nodes, "Ownable: caller is not the nodes contract");
        _;
    }

    constructor(address _fedInuAddress, address _uniswapRouter) {
        uniswapV2Router = IUniswapV2Router02(_uniswapRouter);
        FedInu = _fedInuAddress;
    }

    receive() external payable {}

    function setFedInuAddress(address _fedInuAddress) external onlyOwner {
        FedInu = _fedInuAddress;
    }

    function setNodesAddress(address _nodes) external onlyOwner {
        Nodes = _nodes;
    }

    function addNodeInfo(
        uint256 _nftId,
        uint256 _nodeType,
        address _owner
    ) external override onlyNodes returns (bool success) {
        require(nftInfo[_nftId].owner == address(0), "Node already exists");
        nftInfo[_nftId].nodeType = _nodeType;
        nftInfo[_nftId].owner = _owner;
        nftInfo[_nftId].lastClaim = block.timestamp;
        totalNodes += 1;
        return true;
    }

    function updateNodeOwner(uint256 _nftId, address _owner) external override onlyNodes returns (bool success) {
        require(nftInfo[_nftId].owner != address(0), "Node does not exist");
        nftInfo[_nftId].owner = _owner;
        return true;
    }

    function updateRewardRates(uint256[5] memory _rewardRates) external onlyOwner {
        // Reward rate per day for each type of node (1e9 = 1 COKEN)
        for (uint256 i = 1; i < totalNodes; i++) {
            claimReward(i);
        }
        rewardRates = _rewardRates;
    }

    function pendingRewardFor(uint256 _nftId) public view returns (uint256 _reward) {
        uint256 _nodeType = nftInfo[_nftId].nodeType;
        uint256 _lastClaim = nftInfo[_nftId].lastClaim;
        uint256 _daysSinceLastClaim = ((block.timestamp - _lastClaim) * 1e9) / 86400;
        _reward = (_daysSinceLastClaim * rewardRates[_nodeType - 1]) / 1e9;
        return _reward;
    }

    function claimReward(uint256 _nftId) public override returns (bool success) {
        uint256 _reward = pendingRewardFor(_nftId);
        nftInfo[_nftId].lastClaim = block.timestamp;
        IERC20(FedInu).transfer(nftInfo[_nftId].owner, _reward);
        return true;
    }
}

