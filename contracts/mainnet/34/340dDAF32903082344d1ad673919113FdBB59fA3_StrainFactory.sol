import "./StrainContract.sol";
import "./StrainAdmin.sol";
import '@openzeppelin/contracts/token/ERC20/ERC20.sol';
import '@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol';

contract StrainFactory is StrainContract, StrainAdmin {
    uint256 public constant CREATION_LIMIT_GEN0 = 65535;
    uint256 public constant NUM_CATTRIBUTES = 10;
    uint256 public constant DNA_LENGTH = 16;
    uint256 public constant RANDOM_DNA_THRESHOLD = 7;
    uint256 internal _gen0Counter;

    using SafeERC20 for IERC20;

    event StrainCreated(
        address owner,
        uint256 strainId,
        uint256 genes
    );

    event StrainUpdated(
        address owner,
        uint256 strainId
    );

    /// @dev rarity score
    uint256[4] public rarityScores = [
        0,
        20 * 10**9,
        50 * 10**9,
        100 * 10**9
    ];

    uint256[4] public fertBonusPerInteraction = [
        1428571429,
        2142857143,
        3571428571,
        0
    ];

    uint256 public rewardPerNFT;
    uint256 public rewardPerStage;

    address utilityDistAddr = 0x1d2582DB948C201b10A0E75BcB1e09B8Be4E9770;

    IERC20 strnToken;
    IERC20 wtrToken;
    IERC20 frtToken;

    constructor(
        address _strnTokenAddr,
        address _wtrTokenAddr,
        address _frtTokenAddr
    ) StrainContract() {
        rewardPerNFT = 2100;
        rewardPerStage = 700;        
        strnToken = IERC20(_strnTokenAddr);
        wtrToken = IERC20(_wtrTokenAddr);
        frtToken = IERC20(_frtTokenAddr);
    }

    function strainsOf(address _owner) public view returns (uint256[] memory) {
        // get the number of strains owned by _owner
        uint256 ownerCount = ownerStrainCount[_owner];
        if (ownerCount == 0) {
            return new uint256[](0);
        }

        // iterate through each strainId until we find all the strains
        // owned by _owner
        uint256[] memory ids = new uint256[](ownerCount);
        uint256 i = 1;
        uint256 count = 0;
        while (count < ownerCount || i < strains.length) {
            if (strainToOwner[i] == _owner) {
                ids[count] = i;
                count += 1;
            }
            i += 1;
        }

        return ids;
    }

    function getGen0Count() public view returns (uint256) {
        return _gen0Counter;
    }

    /// @dev throws if @param _genes is valid genes
    modifier onlyValidGenes(uint256 _genes) {
        require(_genes/10**20==0, "Invalid genes");
        _;
    }

    function createStrainGen0(uint256 _genes, uint8 _stage)
        public
        onlyStrainCreator
        onlyValidGenes(_genes)
        returns (uint256)
    {
        require(_gen0Counter < CREATION_LIMIT_GEN0, "gen0 limit exceeded");

        _gen0Counter = _gen0Counter + 1;
        return _createStrain(_genes, _stage);
    }

    function _createStrain(
        uint256 _genes,
        uint8 _stage        
    ) 
        internal
        onlyValidGenes(_genes)
        returns (uint256) 
    {
        uint256 rarityScore = calculateRarityScore(_genes, _stage);

        Strain memory strain = Strain({
            genes: _genes,
            createdTime: uint64(block.timestamp),
            lastWateredTime: uint64(block.timestamp),
            lastFertilisedTime: uint64(block.timestamp),
            stage: _stage,
            waterCount: 0,
            fertiliserCount: 0,
            rarityScore: rarityScore
        });

        strains.push(strain);
        uint256 newStrainId = strains.length - 1;
        emit StrainCreated(msg.sender, newStrainId, _genes);

        _transfer(address(0), msg.sender, newStrainId);
        strnToken.transfer(msg.sender, rewardPerNFT);

        return newStrainId;
    }

    function calculateRarityScore (
        uint256 _genes,
        uint8 _stage
    ) private view returns (uint256) {
        uint number = _genes;
        uint256 raritySum = rarityScores[_stage];
        while (number > 0) {
            uint8 digit = uint8(number % 100);
            raritySum += digit;
            number = number / 100;
        }

        return raritySum;
    }

    function upgradeStage (
        uint256 _genes,
        uint256 _strainId,
        address _owner
    )   public
        onlyValidGenes(_genes)
    {
        Strain storage strain = strains[_strainId];

        require(isStageUpgradable(_strainId), "Insufficient watering");
        
        strain.genes = _genes;
        strain.stage += 1;
        strain.rarityScore = calculateRarityScore(_genes, strain.stage);

        strnToken.transfer(msg.sender, rewardPerStage);

        emit StrainUpdated(_owner, _strainId);
    }

    function isStageUpgradable (
        uint256 _strainId
    )   public
        view
        returns (bool)
    {
        Strain storage strain = strains[_strainId];
        return strain.waterCount >= 14;
    }

    function watered(
        uint256 _strainId,
        address _owner
    ) public {
        Strain storage strain = strains[_strainId];

        require(strain.lastWateredTime + uint64(1 days) <= block.timestamp, "Strain Watering on cooldown");
        
        strain.lastWateredTime = uint64(block.timestamp);
        strain.waterCount += 1;

        wtrToken.safeTransferFrom(msg.sender, utilityDistAddr, 1);
        emit StrainUpdated(_owner, _strainId);
    }

    function fertilized(
        uint256 _strainId,
        address _owner
    ) public {
        Strain storage strain = strains[_strainId];

        require(strain.lastFertilisedTime + uint64(1 days) <= block.timestamp, "Strain Fertilizing on cooldown");
        require(strain.fertiliserCount <= 14, "Useless Fertilizing");

        strain.lastFertilisedTime = uint64(block.timestamp);
        strain.fertiliserCount += 1;
        strain.rarityScore += fertBonusPerInteraction[strain.stage];

        frtToken.safeTransferFrom(msg.sender, utilityDistAddr, 1);
        emit StrainUpdated(_owner, _strainId);
    }
}

