        address _from,
        address _to,
        uint256 _tokenId
    ) internal {
        // assign new owner
        strainToOwner[_tokenId] = _to;

        //update token counts
        ownerStrainCount[_to] = ownerStrainCount[_to] + 1;

        if (_from != address(0)) {
            ownerStrainCount[_from] = ownerStrainCount[_from] - 1;
