    using Clones for address;
    using EnumerableSet for EnumerableSet.AddressSet;

    struct RoundInfo {
        uint256 round;
        uint256 totalSupply;
        uint256 maxSupply;
        uint256 mintPrice;
        uint256 prizePool;
        address winner;
        IRuckyDrawNFT NFT;
    }

    RoundInfo[] private _rounds;
    address private nftTemplate;
    IPaymentSplitter public TEAM;
    ISimpleRNG public RNG;

    uint256 public constant MINTS_PER_ROUND = 101;
    uint256 public constant MAX_ROUNDS = 110;
    uint256 public constant MAX_MINTS = MAX_ROUNDS * MINTS_PER_ROUND;
    uint256 public TOTAL_PAID_OUT = 0;
    bool public GAME_ENDED = false;
    bool public PAUSED = true;

    modifier notEnded() {
        require(!GAME_ENDED, "Game has ended");
        _;
    }

    modifier whenNotPaused() {
        require(!PAUSED, "Game paused");
        _;
    }

    constructor(
        address _rng,
        address _template,
        address _teamSplitter,
        address _marketing,
        address _proceeds
    ) {
        require(_rng != address(0), "RNG oracle cannot be null address");
        RNG = ISimpleRNG(_rng);
        require(
            _template != address(0),
            "NFT template address cannot be null address"
        );
        nftTemplate = _template;
        require(
            _marketing != address(0),
            "Marketing address cannot be null address"
        );
        require(
            _proceeds != address(0),
            "Proceeds address cannot be null address"
        );
        require(
            _teamSplitter != address(0),
            "Team splitter cannot be null address"
        );
        TEAM = IPaymentSplitter(_teamSplitter.clone());
        TEAM.initialize();
        TEAM.addPayee(0x8aAb4dF8ee3ef832039d58FeA975780600dB2d81, 40); // artist royalties
        TEAM.addPayee(_marketing, 5); // dedicated marketing fund
        TEAM.addPayee(_proceeds, 45); // proceeds to team wallet

        _setupNextRound();
    }

    function unpause() public onlyOwner {
        PAUSED = false;
    }

    function ROUNDS() public view returns (uint256) {
        return _rounds.length;
    }

    function nfts() public view returns (address[] memory _nfts) {
        _nfts = new address[](_rounds.length);

        for (uint256 i = 0; i < _rounds.length; i++) {
            _nfts[i] = address(_rounds[i].NFT);
        }
    }

    function mintsRemaining() public view returns (uint256) {
        RoundInfo memory info = currentRoundInfo();

        return
            MAX_MINTS - ((info.round - 1) * MINTS_PER_ROUND) - info.totalSupply;
    }

    function currentRound() public view returns (uint256) {
        return currentRoundInfo().round;
    }

    function currentRoundInfo() public view returns (RoundInfo memory) {
        return _rounds[_rounds.length - 1];
    }

    function getRoundInfo(uint256 round)
        public
        view
        returns (RoundInfo memory)
    {
        return _rounds[round - 1];
    }

    function MINT_PRICE() public view returns (uint256) {
        return currentRoundInfo().mintPrice;
    }

    function mint(uint256 count) external payable notEnded whenNotPaused {
        require(count != 0, "Must mint at least one");
        RoundInfo storage info = _rounds[currentRound() - 1];

        require(
            msg.value == info.mintPrice * count,
            "Caller did not supply correct amount"
        );

        info.NFT.adminMint(_msgSender(), count);
        info.totalSupply = info.NFT.totalSupply();
        info.prizePool = (info.totalSupply * info.mintPrice) / 2;

        _checkRound();
    }

    function _generateWinner() internal view returns (uint256) {
        RoundInfo memory info = currentRoundInfo();

        return (uint256(RNG.getRandom(info.round)) % info.totalSupply) + 1; // +1 as token ids start at 1
    }

    function _checkRound() internal {
        RoundInfo storage info = _rounds[currentRound() - 1];

        if (info.NFT.totalSupply() == info.NFT.MAX_SUPPLY()) {
            // round is over
            // randomization shim
            uint256 winner = _generateWinner();

            info.NFT.setWinner(winner);
            info.winner = info.NFT.ownerOf(winner);

            TOTAL_PAID_OUT += address(this).balance / 2;

            IPaymentSplitter splitter = IPaymentSplitter(address(TEAM).clone());
            splitter.initialize();
            splitter.addPayee(info.winner, 1);
            splitter.addPayee(address(TEAM), 1);
            payable(address(splitter)).transfer(address(this).balance);
            splitter.releaseAll();
            TEAM.releaseAll();

            if (_rounds.length == MAX_ROUNDS) {
                GAME_ENDED = true;
            } else {
                _setupNextRound();
            }
        }
    }

    function _setupRound(uint256 round) internal {
        IRuckyDrawNFT currentNFT = IRuckyDrawNFT(nftTemplate.clone());
        string memory roundstr = round.toString();
        currentNFT.initialize(
            string(abi.encodePacked("RuckyDraw Round ", roundstr)),
            string(abi.encodePacked("RDR", roundstr)),
            round,
            MINTS_PER_ROUND,
            address(TEAM),
            500
        );

        _rounds.push(
            RoundInfo({
                round: round,
                totalSupply: 0,
                maxSupply: MINTS_PER_ROUND,
                mintPrice: _mintPrice(round),
                prizePool: 0,
                winner: address(0),
                NFT: currentNFT
            })
        );
    }

    function _mintPrice(uint256 round) internal pure returns (uint256) {
        if (round == 1) {
            return 1 ether;
        } else {
            return (round - 1) * 5 ether;
        }
    }

    function _setupNextRound() internal {
        uint256 nextRound = _rounds.length + 1;
        _setupRound(nextRound);
    }
