contract EasyAvatarsRewards {
    using SafeERC20 for IERC20;

    // Access Management
    address public manager;
    address[] public accessWallets;
    // NFT Contract
    EasyAvatars easyAvatarsContract;
    // Rewards
    uint256 public rewardIndex;
    mapping(uint256 => uint256) public nftIndex;

    constructor(address _easyAvatarsAddress) {
        manager = msg.sender;
        easyAvatarsContract = EasyAvatars(_easyAvatarsAddress);
    }

    // Deposit Rewards
    function depositRewards(uint256 _amount) public {
        IERC20(0x04068DA6C83AFCFA0e13ba15A6696662335D5B75).safeTransferFrom(
            msg.sender,
            address(this),
            _amount
        );
        rewardIndex += _amount / easyAvatarsContract.numTokensMinted();
    }

    // Increase NFT Index
    function setNFTIndex(uint256 _nftId) public hasAccess {
        nftIndex[_nftId] = rewardIndex;
    }

    // Claim Reward
    function claimSingle(uint256 _tokenId) public {
        require(
            msg.sender == easyAvatarsContract.ownerOf(_tokenId),
            "Token owner is not message sender"
        );
        uint256 _tmpIndex = nftIndex[_tokenId];
        nftIndex[_tokenId] = rewardIndex;
        IERC20(0x04068DA6C83AFCFA0e13ba15A6696662335D5B75).safeTransfer(
            msg.sender,
            rewardIndex - _tmpIndex
        );
    }

    function claimAll() public {
        for (
            uint256 _i = 0;
            _i < easyAvatarsContract.balanceOf(msg.sender);
            _i++
        ) {
            uint256 _currentToken = easyAvatarsContract.tokenOfOwnerByIndex(
                msg.sender,
                _i
            );

            uint256 _tmpIndex = nftIndex[_currentToken];
            nftIndex[_currentToken] = rewardIndex;
            IERC20(0x04068DA6C83AFCFA0e13ba15A6696662335D5B75).safeTransfer(
                msg.sender,
                rewardIndex - _tmpIndex
            );
        }
    }

    function getSingleReward(uint256 _tokenId) public view returns (uint256) {
        return rewardIndex - nftIndex[_tokenId];
    }

    function getAllRewards() public view returns (uint256) {
        uint256 _total = 0;
        for (
            uint256 _i = 0;
            _i < easyAvatarsContract.balanceOf(msg.sender);
            _i++
        ) {
            _total += getSingleReward(
                easyAvatarsContract.tokenOfOwnerByIndex(msg.sender, _i)
            );
        }
        return _total;
    }

    // Emergency Withdrawal
    function emergencyWithdrawal(address _token, uint256 _amount)
        external
        onlyOwner
    {
        IERC20(_token).safeTransfer(manager, _amount);
    }

    // Owner Modifier
    function setManager(address _address) external onlyOwner {
        manager = _address;
    }

    modifier onlyOwner() {
        require(msg.sender == manager);
        _;
    }

    // Access to indexes modifier
    function addAccess(address _address) external onlyOwner {
        accessWallets.push(_address);
    }

    function removeAccess(address _address) external onlyOwner {
        for (uint256 i; i < accessWallets.length; i++) {
            if (_address == accessWallets[i]) {
                delete accessWallets[i];
                break;
            }
        }
    }

    modifier hasAccess() {
        bool _hasAccess = false;
        for (uint256 i; i < accessWallets.length; i++) {
            if (msg.sender == accessWallets[i]) {
                _hasAccess = true;
                break;
            }
        }
        require(_hasAccess);
        _;
    }
}