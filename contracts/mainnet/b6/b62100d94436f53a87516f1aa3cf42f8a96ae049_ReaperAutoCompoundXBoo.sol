        address _vault,
        address[] memory _feeRemitters,
        address[] memory _strategists
    ) {
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);

        vault = _vault;
        treasury = _feeRemitters[0];
        strategistRemitter = _feeRemitters[1];

