    address public owner;
    address public pendingOwner;
}

contract Ownable is OwnableData {
    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);

    /// @notice `owner` defaults to msg.sender on construction.
    constructor() {
        owner = msg.sender;
        emit OwnershipTransferred(address(0), msg.sender);
    }

    /// @notice Transfers ownership to `newOwner`. Either directly or claimable by the new pending owner.
    /// Can only be invoked by the current `owner`.
    /// @param newOwner Address of the new owner.
    /// @param direct True if `newOwner` should be set immediately. False if `newOwner` needs to use `claimOwnership`.
    /// @param renounce Allows the `newOwner` to be `address(0)` if `direct` and `renounce` is True. Has no effect otherwise.
    function transferOwnership(
        address newOwner,
        bool direct,
        bool renounce
    ) public onlyOwner {
        if (direct) {
            // Checks
            require(newOwner != address(0) || renounce, "Ownable: zero address");

            // Effects
            emit OwnershipTransferred(owner, newOwner);
            owner = newOwner;
            pendingOwner = address(0);
        } else {
            // Effects
            pendingOwner = newOwner;
        }
    }

    /// @notice Needs to be called by `pendingOwner` to claim ownership.
    function claimOwnership() public {
        address _pendingOwner = pendingOwner;

        // Checks
        require(msg.sender == _pendingOwner, "Ownable: caller != pending owner");

        // Effects
        emit OwnershipTransferred(owner, _pendingOwner);
        owner = _pendingOwner;
        pendingOwner = address(0);
    }

    /// @notice Only allows the `owner` to execute the function.
    modifier onlyOwner() {
        require(msg.sender == owner, "Ownable: caller is not the owner");
        _;
    }
}

contract Nox is ERC20Permit, Ownable {

    using LowGasSafeMath for uint256;

    address public reactor;
    address public initializer;

    event LogFission (address indexed recipient, uint256 amount);
    event LogFusion (address indexed recipient, uint256 amount);
    event LogRadiation (uint256 indexed epoch, uint256 radiation, uint256 radioactivity);
    event LogReactorUpdated (address reactor);
    event LogSetRadioactivity (uint256 indexed radioactivity);
    event LogSupply (uint256 indexed epoch, uint256 timestamp, uint256 totalSupply);
    event LogTransferNuclei (address indexed from, address indexed to, uint256 value);

    struct Radiation {
        uint epoch;
        uint radiation;
        uint previousRadiatingSupply;
        uint newRadiatingSupply;
        uint emission;
        uint radioactivity;
        uint32 timeOccurred;
    }
    Radiation[] public radiations;
    uint256 public radiationsEmitted;

    uint256 public RADIOACTIVITY;

    uint256 private constant MAX_UINT256 = ~uint256(0);
    uint256 public constant INITIAL_NUCLEI_DENSITY = 420_69_420 * 10**9;
    uint256 public constant TOTAL_NUCLEI = MAX_UINT256 - (MAX_UINT256 % INITIAL_NUCLEI_DENSITY);
    uint256 private constant MAX_SUPPLY = ~uint128(0);

    uint256 private _noxDensity;
    uint256 internal _nucleiDensity;
    mapping (address => uint256) private _nucleiBalances;

    // Voting
    struct Checkpoint {
        uint256 fromBlock;
        uint256 votes;
    }
    mapping (address => mapping(uint256 => Checkpoint)) public checkpoints;
    mapping (address => uint256) public numberOfCheckpoints;

    event DelegateChanged (address indexed delegator, address indexed fromDelegate, address indexed toDelegate);
    event DelegateVotesChanged (address indexed delegate, uint256 previousBalance, uint256 newBalance);

    constructor () ERC20("Nox", "NOX", 9) ERC20Permit() {
        initializer = msg.sender;
        _nucleiDensity = INITIAL_NUCLEI_DENSITY;
        _noxDensity = TOTAL_NUCLEI.div(_nucleiDensity);
    }

    function initialize (address reactor_) external returns (bool) {
        require(msg.sender == initializer, "Only initializer can initialize");
        require(reactor_ != address(0), "Invalid reactor address");
        reactor = reactor_;
        _nucleiBalances[reactor] = TOTAL_NUCLEI;

        emit LogTransferNuclei(address(0x0), reactor, _nucleiDensity);
        emit LogReactorUpdated(reactor_);
        
        initializer = address(0);
        return true;
    }

    /**
        @notice initialize radioactivity levels
        @param _RADIOACTIVITY uint256
     */
    function setRadioactivity (uint256 _RADIOACTIVITY) external onlyOwner {
        require(RADIOACTIVITY == 0, "Require non zero radioactivity");
        RADIOACTIVITY = unstableDensity(_RADIOACTIVITY * 10 ** decimals());
        emit LogSetRadioactivity(RADIOACTIVITY);
    }

    /**
        @notice fuse Cyber into Nox
        @param _amount uint
     */
    function fuse (address _recipient, uint _amount) public onlyReactor() returns (uint256 noxAmount_) {
        _transferNuclei(reactor, address(this), _amount);
        noxAmount_ = _amount.mul(10 ** decimals()) / radioactivity();
        _mint(_recipient, noxAmount_);
        emit LogFusion(_recipient, _amount);
    }

    /**
        @notice fission Nox into Cyber
        @param _amount uint
     */
    function fission (address _recipient, uint _amount) public onlyReactor() {
        _burn(_recipient, _amount);
        _transferNuclei(address(this), reactor, _amount);
        emit LogFission(_recipient, _amount);
    }

    /**
        @notice radiate, decreasing nuclei density per Nox
        @param emission_ uint256
        @return uint256
     */
    function radiate (uint256 emission_, uint epoch_) public onlyReactor() returns (uint256) {
        uint256 radiationAmount;
        uint256 radiatingSupply_ = radiatingSupply();

        if (emission_ == 0) {
            emit LogSupply(epoch_, block.timestamp, _nucleiDensity);
            emit LogRadiation(epoch_, 0, radioactivity());
            return _nucleiDensity;
        } else if (radiatingSupply_ > 0) {
            radiationAmount = emission_.mul(_nucleiDensity).div(radiatingSupply_);
        } else {
            radiationAmount = emission_;
        }

        _nucleiDensity = _nucleiDensity.add(radiationAmount);

        if (_nucleiDensity > MAX_SUPPLY) {
            _nucleiDensity = MAX_SUPPLY;
        }

        _noxDensity = TOTAL_NUCLEI.div(_nucleiDensity);

        _storeRadiation(radiatingSupply_, emission_, epoch_);

        return _nucleiDensity;
    }

    /**
        @notice stores previous radiations emissions
        @param previousRadiatingSupply_ uint
        @param emission_ uint
        @param epoch_ uint
     */
    function _storeRadiation (uint previousRadiatingSupply_, uint emission_, uint epoch_) internal {
        uint radiationPercent = emission_.mul(1e18).div(previousRadiatingSupply_);

        radiations.push(Radiation({
            epoch: epoch_,
            radiation: radiationPercent, // 18 decimals
            previousRadiatingSupply: previousRadiatingSupply_,
            newRadiatingSupply: radiatingSupply(),
            emission: emission_,
            radioactivity: radioactivity(),
            timeOccurred: uint32(block.timestamp)
        }));
        radiationsEmitted++;
        
        emit LogSupply(epoch_, block.timestamp, _nucleiDensity);
        emit LogRadiation(epoch_, radiationPercent, radioactivity());
    }

    function unstableAmount (address who) public view returns (uint256) {
        return _nucleiBalances[who].div(_noxDensity);
    }

    function unstableDensity (uint amount) public view returns (uint) {
        return amount.mul(_noxDensity);
    }

    function noxDensity (uint nuclei) public view returns (uint) {
        return nuclei.div(_noxDensity);
    }

    function radiatingSupply () public view returns (uint) {
        return _nucleiDensity.sub(unstableAmount(reactor));
    }

    function radioactivity () public view returns (uint) {
        return noxDensity(RADIOACTIVITY);
    }

    function _transferNuclei (address from, address to, uint256 value) internal returns (bool) {
        uint256 nucleiValue = unstableDensity(value);
        _nucleiBalances[from] = _nucleiBalances[from].sub(nucleiValue);
        _nucleiBalances[to] = _nucleiBalances[to].add(nucleiValue);
        emit LogTransferNuclei(from, to, value);
        return true;
    }

    /**
     * @notice Gets the current votes balance for  account`
     * @param account The address to get votes balance
     * @return The number of current votes for `account`
     */
    function getCurrentVotes (address account) external view returns (uint256) {
        uint256 nCheckpoints = numberOfCheckpoints[account];
        return nCheckpoints > 0 ? checkpoints[account][nCheckpoints - 1].votes : 0;
    }

    /**
     * @notice Determine the prior number of votes for an account as of a block number
     * @dev Block number must be a finalized block or else this function will revert to prevent misinformation.
     * @param account The address of the account to check
     * @param blockNumber The block number to get the vote balance at
     * @return The number of votes the account had as of the given block
     */
    function getPriorVotes (address account, uint256 blockNumber) external view returns (uint256) {
        require(blockNumber < block.number, "Not yet determined");

        // Absence of voting power
        uint256 nCheckpoints = numberOfCheckpoints[account];
        if (nCheckpoints == 0 || checkpoints[account][0].fromBlock > blockNumber) {
            return 0;
        }

        // Quick check for most recent balance
        if (checkpoints[account][nCheckpoints - 1].fromBlock <= blockNumber) {
            return checkpoints[account][nCheckpoints - 1].votes;
        }

        uint256 lower = 0;
        uint256 upper = nCheckpoints - 1;
        while (upper > lower) {
            uint256 center = upper - (upper - lower) / 2; // ceil, avoiding overflow
            Checkpoint memory checkpoint = checkpoints[account][center];
            if (checkpoint.fromBlock == blockNumber) {
                return checkpoint.votes;
            } else if (checkpoint.fromBlock < blockNumber) {
                lower = center;
            } else {
                upper = center - 1;
            }
        }

        return checkpoints[account][lower].votes;
    }

    /**
        @notice Ensure delegation moves when token is transferred.
     */
    function _beforeTokenTransfer (address from, address to, uint256 amount) internal override {
        if (from != to && amount > 0) {
            if (from != address(0) && from != address(this)) {
                uint256 nCheckpoints = numberOfCheckpoints[from];
                uint256 oldVotingPower = nCheckpoints > 0 ? checkpoints[from][nCheckpoints - 1].votes : 0;
                uint256 newVotingPower = oldVotingPower.sub(amount);
                _writeCheckpoint(from, nCheckpoints, oldVotingPower, newVotingPower);
            }

            if (to != address(0) && to != address(this)) {
                uint256 nCheckpoints = numberOfCheckpoints[to];
                uint256 oldVotingPower = nCheckpoints > 0 ? checkpoints[to][nCheckpoints - 1].votes : 0;
                uint256 newVotingPower = oldVotingPower.add(amount);
                _writeCheckpoint(to, nCheckpoints, oldVotingPower, newVotingPower);
            }
        }
    }

    function _writeCheckpoint (address account, uint256 nCheckpoints, uint256 oldVotes, uint256 newVotes) internal {
        if (nCheckpoints > 0 && checkpoints[account][nCheckpoints - 1].fromBlock == block.number) {
            checkpoints[account][nCheckpoints - 1].votes = newVotes;
        } else {
            checkpoints[account][nCheckpoints] = Checkpoint(block.number, newVotes);
            numberOfCheckpoints[account] = nCheckpoints + 1;
        }

        emit DelegateVotesChanged(account, oldVotes, newVotes);
    }

    modifier onlyReactor() {
        require(msg.sender == reactor, "Only reactor can invoke");
        _;
    }
}