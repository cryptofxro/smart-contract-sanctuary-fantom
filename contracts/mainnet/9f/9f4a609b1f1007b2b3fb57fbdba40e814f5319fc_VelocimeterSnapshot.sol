    function veVotingPower(address account) public view returns (uint) {
        uint nftTokenCount = VotingEscrow(VotingEscrowAddress).balanceOf(account);
        uint totalNFTPower = 0;
        for(uint i=0;i< nftTokenCount ; i++) {
           uint nftId = VotingEscrow(VotingEscrowAddress).tokenOfOwnerByIndex(account,i);
           totalNFTPower+= VotingEscrow(VotingEscrowAddress).balanceOfNFT(nftId);
        }
