    // Base Tip Dollar Amount
    uint256 baseDollars = 1;

    AggregatorV3Interface internal priceFeedUsd;

    constructor(address _admin) ERC20("GetMePizza", unicode"🍕") {
        _mint(msg.sender, 1000000 * 10 ** decimals());
        admin = _admin;
