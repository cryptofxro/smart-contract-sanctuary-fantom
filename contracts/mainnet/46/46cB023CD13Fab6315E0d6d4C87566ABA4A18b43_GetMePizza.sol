     * Returns the latest amount of token for $1
     */
    function getLatestPrice() public view returns (uint256) {
        (
            /*uint80 roundID*/,
            int price,
            /*uint startedAt*/,
            /*uint timeStamp*/,
            /*uint80 answeredInRound*/
        ) = priceFeedUsd.latestRoundData();
        return 10000000000000000 / uint256(price);
