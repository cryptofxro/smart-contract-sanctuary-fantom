pragma solidity ^0.8.7;

contract CryptoLancerGeist is ERC721, Ownable {
    event StartJob(
        uint256 indexed tokenId,
        address indexed employer,
        address indexed employee,
        uint256 deadLine,
        uint256 amount,
        uint256 serviceFee,
        uint256 valueAfterServiceFee
    ); //calculate in cloud?
    event CancelJob(
        uint256 indexed tokenId,
        address indexed employer,
        address indexed employee,
        uint256 refundedAmount
    );
    event FinishedJob(
        uint256 indexed tokenId,
        address indexed employer,
        address indexed employee,
        uint256 withdrawDate
    );
    event DisputeJob(
        uint256 indexed tokenId,
        address indexed employer,
        address indexed employee
    );
    event EmployeeCancel(
        uint256 indexed tokenId,
        address indexed employer,
        address indexed employee,
        uint256 serviceFee
    ); //added service fee, if made dynamic pull from struct?
    event ExtendDeadLine(
        uint256 indexed tokenId,
        address indexed employer,
        address indexed employee,
        uint256 oldDeadLine,
        uint256 newDeadLine
    ); // emit indexed?
    event HandleDispute(
        uint256 indexed tokenId,
        address indexed employer,
        address indexed employee,
        uint256 employerAmount,
        uint256 employeeAmount,
        uint256 disputeFee,
        uint256 serviceFee
    );

    enum ProjectState {
        started,
        working,
        canceled,
        completed,
        disputed,
        closed
    }

    struct Project {
        ProjectState state;
        address employer;
        address employee;
        uint256 deadLine;
        uint256 completionTime; //
        string tokenURI;
        uint256 amount;
        uint256 serviceFee;
    }

    IPool public immutable poolContract;
    WethInterface public immutable wMatic;
    WethInterface public immutable aToken; //
    uint256 private tokenCounter;
    uint256 public totalAmountLockedIn; //
    uint256 public withdrawWait;
    uint256 public serviceFeePercentage;
    bool public publicMintStatus;
    mapping(uint256 => Project) public tokenIdToProject;

    constructor(
        string memory _name,
        string memory _symbol,
        address _iPoolAddress,
        address _wethAddress,
        address _aTokenAddress,
        uint256 _withdrawWait,
        uint256 _serviceFeePercentage
    ) ERC721(_name, _symbol) {
        poolContract = IPool(_iPoolAddress);
        wMatic = WethInterface(_wethAddress);
        aToken = WethInterface(_aTokenAddress);
        withdrawWait = _withdrawWait; //days wait before withdraw
        serviceFeePercentage = _serviceFeePercentage;
        publicMintStatus = true;
    }

    /* ************** */
    /* CORE FUNCTIONS */
    /* ************** */

    function startJob(
        address _employee,
        uint256 _deadLine,
        string calldata _tokenURI
    ) public payable {
        require(publicMintStatus, "Public mint is closed");
        uint256 serviceFee = (msg.value * serviceFeePercentage) / 100;
        uint256 valueAfterServiceFee = msg.value - serviceFee;
        tokenCounter++;
        tokenIdToProject[tokenCounter].state = ProjectState.started;
        tokenIdToProject[tokenCounter].employer = msg.sender;
        tokenIdToProject[tokenCounter].employee = _employee;
        tokenIdToProject[tokenCounter].deadLine = _deadLine + block.timestamp;
        tokenIdToProject[tokenCounter].tokenURI = _tokenURI;
        tokenIdToProject[tokenCounter].amount = valueAfterServiceFee;
        tokenIdToProject[tokenCounter].serviceFee = serviceFee;
        _safeMint(msg.sender, tokenCounter);
        totalAmountLockedIn += valueAfterServiceFee; //
        (bool success, ) = address(wMatic).call{value: valueAfterServiceFee}(
            abi.encodeWithSignature("deposit()")
        ); //does wFTM have a recieve function?
        require(success, "failed to wrap");
        wMatic.approve(address(poolContract), valueAfterServiceFee);
        poolContract.deposit(address(wMatic), valueAfterServiceFee, address(this), 0);
        emit StartJob(
            tokenCounter,
            msg.sender,
            _employee,
            _deadLine + block.timestamp, // adjusted
            msg.value,
            serviceFee, //added
            valueAfterServiceFee //added couldn't this be calculated in the cloud?
        );
    }

    function cancelJob(uint256 _tokenId) public {
        require(msg.sender == tokenIdToProject[_tokenId].employer, "You are not the employer");
        require(
            tokenIdToProject[_tokenId].state == ProjectState.canceled ||
                (block.timestamp >= tokenIdToProject[_tokenId].deadLine &&
                    (tokenIdToProject[_tokenId].state == ProjectState.started ||
                        tokenIdToProject[_tokenId].state == ProjectState.working)),
            "Employee did not cancel nor pass the deadLine"
        );
        tokenIdToProject[_tokenId].state = ProjectState.closed;
        poolContract.withdraw(address(wMatic), tokenIdToProject[_tokenId].amount, address(this));
        wMatic.withdraw(tokenIdToProject[_tokenId].amount);
        totalAmountLockedIn -= tokenIdToProject[_tokenId].amount; //
        payable(msg.sender).transfer(tokenIdToProject[_tokenId].amount);
        emit CancelJob(
            _tokenId,
            tokenIdToProject[_tokenId].employer,
            tokenIdToProject[_tokenId].employee,
            tokenIdToProject[_tokenId].amount
        );
    }

    function finishedJob(uint256 _tokenId) public {
        require(
            msg.sender == tokenIdToProject[_tokenId].employee,
            "You are not hired for this job"
        );
        require( // can still call if emplyee cancels
            tokenIdToProject[_tokenId].state == ProjectState.started ||
                tokenIdToProject[_tokenId].state == ProjectState.working ||
                tokenIdToProject[_tokenId].state == ProjectState.canceled,
            "Job has already been closed, disputed or completed"
        );
        tokenIdToProject[_tokenId].state = ProjectState.completed;
        tokenIdToProject[_tokenId].completionTime = block.timestamp;
        emit FinishedJob(
            _tokenId,
            tokenIdToProject[_tokenId].employer,
            tokenIdToProject[_tokenId].employee,
            block.timestamp + withdrawWait
        );
    }

    function disputeJob(uint256 _tokenId) public {
        require(msg.sender == tokenIdToProject[_tokenId].employer, "You are not the employer");
        require( //can only call if started, working, canceled, or completed
            tokenIdToProject[_tokenId].state != ProjectState.disputed &&
                tokenIdToProject[_tokenId].state != ProjectState.closed,
            "Your job has been closed or disputed"
        ); //
        tokenIdToProject[_tokenId].state = ProjectState.disputed;
        emit DisputeJob(
            _tokenId,
            tokenIdToProject[_tokenId].employer,
            tokenIdToProject[_tokenId].employee
        );
    }

    function handleDispute(
        uint256 _tokenId,
        uint256 _employerAmount,
        uint256 _employeeAmount,
        uint256 _disputeFee //PREVENTED: excess ETH flows to the contract
    ) public onlyOwner {
        require(
            ((_disputeFee * 100) / tokenIdToProject[_tokenId].amount) <= 30,
            "fee can't be over 30%"
        );
        require(
            _employerAmount + _employeeAmount + _disputeFee == tokenIdToProject[_tokenId].amount,
            "invalid amount"
        ); // set it to ==
        require(
            tokenIdToProject[_tokenId].state == ProjectState.disputed,
            "Your job has not been disputed"
        ); //
        tokenIdToProject[_tokenId].state = ProjectState.closed;
        poolContract.withdraw(address(wMatic), tokenIdToProject[_tokenId].amount, address(this));
        wMatic.withdraw(tokenIdToProject[_tokenId].amount);
        totalAmountLockedIn -= tokenIdToProject[_tokenId].amount; //
        payable(owner()).transfer(_disputeFee);
        payable(tokenIdToProject[_tokenId].employer).transfer(_employerAmount);
        payable(tokenIdToProject[_tokenId].employee).transfer(_employeeAmount);
        emit HandleDispute(
            _tokenId,
            tokenIdToProject[_tokenId].employer,
            tokenIdToProject[_tokenId].employee,
            _employerAmount,
            _employeeAmount,
            _disputeFee,
            tokenIdToProject[_tokenId].serviceFee //store in struct if made dynamic
        );
    }

    function employeeCancel(uint256 _tokenId) public {
        require(
            msg.sender == tokenIdToProject[_tokenId].employee,
            "You are not hired for this job"
        );
        require( //can they cancel after complete?
            tokenIdToProject[_tokenId].state == ProjectState.started ||
                tokenIdToProject[_tokenId].state == ProjectState.working,
            "Job has already been closed, disputed, canceled or completed"
        );
        tokenIdToProject[_tokenId].state = ProjectState.canceled;
        emit EmployeeCancel(
            _tokenId,
            tokenIdToProject[_tokenId].employer,
            tokenIdToProject[_tokenId].employee,
            tokenIdToProject[_tokenId].serviceFee //store in struct if made dynamic
        );
    }

    function extendDeadLine(uint256 _tokenId, uint256 _hours) public {
        require(
            msg.sender == tokenIdToProject[_tokenId].employee,
            "You are not hired for this job"
        ); //can extend after started, working, completed, canceled
        require( //cant' extend in disputed and closed
            tokenIdToProject[_tokenId].state != ProjectState.disputed &&
                tokenIdToProject[_tokenId].state != ProjectState.closed,
            "You can no longer extend the deadLine"
        );
        tokenIdToProject[_tokenId].state = ProjectState.working;
        emit ExtendDeadLine(
            _tokenId,
            tokenIdToProject[_tokenId].employer,
            tokenIdToProject[_tokenId].employee,
            tokenIdToProject[_tokenId].deadLine,
            tokenIdToProject[_tokenId].deadLine + _hours * 60 * 60
        );
        tokenIdToProject[_tokenId].deadLine += _hours * 60 * 60;
        tokenIdToProject[_tokenId].completionTime = 0; //added
    }

    /* ****************** */
    /* WITHDRAW FUNCTIONS */
    /* ****************** */

    function withdrawProceeds(uint256 _tokenId) public {
        require(
            msg.sender == tokenIdToProject[_tokenId].employee,
            "You are not hired for this job"
        ); //emit event after closed?
        require(
            tokenIdToProject[_tokenId].state == ProjectState.completed &&
                withdrawWait + tokenIdToProject[_tokenId].completionTime <= block.timestamp,
            "The funds are not withdrawalable yet!"
        );
        tokenIdToProject[_tokenId].state = ProjectState.closed;
        poolContract.withdraw(address(wMatic), tokenIdToProject[_tokenId].amount, address(this));
        wMatic.withdraw(tokenIdToProject[_tokenId].amount);
        totalAmountLockedIn -= tokenIdToProject[_tokenId].amount; //
        payable(msg.sender).transfer(tokenIdToProject[_tokenId].amount);
        //accepted for insta withdraw with additional function?
    }

    function withdrawRewards() public onlyOwner {
        uint256 withdrawalableAmount = aTokenBalance() - totalAmountLockedIn;
        poolContract.withdraw(address(wMatic), withdrawalableAmount, address(this));
        wMatic.withdraw(withdrawalableAmount);
        payable(owner()).transfer(address(this).balance);
    }

    /* **************** */
    /* GETTER FUNCTIONS */
    /* **************** */

    function aTokenBalance() public view returns (uint256) {
        return aToken.balanceOf(address(this));
    }

    function totalSupply() public view returns (uint256) {
        return tokenCounter;
    }

    function tokenURI(uint256 _tokenId) public view virtual override returns (string memory) {
        require(_exists(_tokenId), "ERC721Metadata: URI query for nonexistent token");
        return tokenIdToProject[_tokenId].tokenURI;
    }

    /* **************** */
    /* SETTER FUNCTIONS */
    /* **************** */
    //add setter for serviceFee?
    function togglePublicMintStatus() public onlyOwner {
        publicMintStatus = !publicMintStatus;
    }

    function setWithdrawWait(uint256 _withdrawWait) public onlyOwner {
        withdrawWait = _withdrawWait;
    }

    // does this need restrictions?
    function setServiceFeePercentage(uint256 _serviceFeePercentage) public onlyOwner {
        serviceFeePercentage = _serviceFeePercentage;
    } // untested -- might want too consider adding tier system with an internla function that calculates the amount based on msg.value

    /* ****************** */
    /* FALLBACK FUNCTIONS */
    /* ****************** */

    receive() external payable {} //might need functionality
}

