pragma solidity 0.6.12;

import "./interfaces/IUniswapV2Pair.sol";
import "./interfaces/IRedemptionPair.sol";
import "./interfaces/IRedemptionFactory.sol";
import './libraries/TransferHelper.sol';

contract Migrator {
    address public oldFactory;
    address public factory;
    uint256 public desiredLiquidity = uint256(-1);

    constructor(
        address _oldFactory,
        address _factory
    ) public {
        oldFactory = _oldFactory;
        factory = _factory;
    }

    function migrate(IUniswapV2Pair orig) public returns (IRedemptionPair) {
        require(orig.factory() == oldFactory, "not from old factory");
        address token0 = orig.token0();
        address token1 = orig.token1();
        IRedemptionPair pair = IRedemptionPair(IRedemptionFactory(factory).getPair(token0, token1));
        if (pair == IRedemptionPair(address(0))) {
            pair = IRedemptionPair(IRedemptionFactory(factory).createPair(token0, token1));
        }
        uint256 lp = orig.balanceOf(msg.sender);
        if (lp == 0) return pair;
        desiredLiquidity = lp;
        orig.transferFrom(msg.sender, address(this), lp);
        orig.approve(address(orig), lp);
        (uint256 amount0, uint256 amount1) = orig.burn(address(pair));

        TransferHelper.safeTransfer(token0, address(pair), amount0);
        TransferHelper.safeTransfer(token1, address(pair), amount1);

        pair.mint(msg.sender);
        desiredLiquidity = uint256(-1);
        return pair;
    }
}

