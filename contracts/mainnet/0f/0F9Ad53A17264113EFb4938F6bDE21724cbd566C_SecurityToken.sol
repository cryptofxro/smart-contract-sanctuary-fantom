    )
        external
        view override
        returns (bytes1 reasonCode, bytes32 appStatusCode, bytes32 toPartition)
    {
        if (_partition == UNLOCKED) {
            (reasonCode, appStatusCode) = _canTransfer(_from, _to, _value, _data);
