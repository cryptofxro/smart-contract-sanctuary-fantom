pragma solidity ^0.8.4;

import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "./NftSurveyBase.sol";

contract SimpleVoteNftSurveyERC20 is NftSurveyBase {
    using SafeERC20 for IERC20;

    Survey private _surveys;
    mapping(address => mapping(address => bool)) private _answers;

    event NewSurvey(address indexed operator);
    event NewAnswer(address indexed responser);
    event SurveyStarted(address indexed operator);
    event SurveyEnded(address indexed operator);

    constructor(
        string memory title_,
        string memory description_,
        uint256 rewardAmount_,
        address rewardToken_,
        address[] memory requiredNft_
    ) {
        name = "Idexo Simple Vote NFT Survey";

        require(rewardAmount_ > 0, "ZERO_AMOUNT");
        require(_isContract(rewardToken_), "REWARD_NOT_CONTRACT");
        for (uint256 n = 0; n < requiredNft_.length; n++) {
            require(_isContract(requiredNft_[n]), "NFT_NOT_CONTRACT");
        }

        _surveys.surveyTitle = title_;
        _surveys.surveyDescription = description_;
        _surveys.rewardAmount = rewardAmount_;
        _surveys.rewardToken = rewardToken_;
        _surveys.requiredNft = requiredNft_;

        emit NewSurvey(msg.sender);
    }

    /**
     * @dev Start a survey.
     *
     */
    function startSurvey() external onlyOperator {
        require(!_surveys.isOpen, "SURVEY_STARTED");
        require(IERC20(_surveys.rewardToken).balanceOf(address(this)) >= _surveys.rewardAmount, "INSUFFICIENT_BALANCE");
        _surveys.isOpen = true;
        _surveys.startTime = block.timestamp;
        emit SurveyStarted(msg.sender);
    }

    /**
     * @dev End a survey.
     *
     */
    function endSurvey() external onlyOperator {
        require(_surveys.isOpen, "SURVEY_ENDED");
        _surveys.isOpen = false;
        _surveys.endTime = block.timestamp;
        emit SurveyEnded(msg.sender);
    }

    /**
     * @dev answer a new survey.
     *
     * @param requiredNft_ address of required nft.
     * @param optionIds_ optionIds[].
     */
    function answerSurvey(address requiredNft_, uint8[] calldata optionIds_) external nonReentrant {
        require(!paused, "CONTRACT_PAUSED");
        require(_surveys.isOpen, "SURVEY_ENDED");
        require(_isHolder(requiredNft_, msg.sender), "NOT_NFT_HOLDER");
        require(!answered(requiredNft_, msg.sender), "ALREADY_ANSWERED");
        require(_hasBalance(), "INSUFFICIENT_BALANCE");

        for (uint256 q = 0; q < optionIds_.length; q++) {
            require(optionIds_[q] < _surveys.questions[q].options.length, "INVALID_OPTION_ID");
            _surveys.questions[q].options[optionIds_[q]].answers++;
        }
        _answers[requiredNft_][msg.sender] = true;
        _surveys.totalAnswers++;

        IERC20(_surveys.rewardToken).safeTransfer(msg.sender, _surveys.rewardAmount);

        emit NewAnswer(msg.sender);
    }

    /**
     * @dev Get a survey.
     *
     */
    function getSurvey() external view returns (Survey memory) {
        return _surveys;
    }

    /**
     * @dev Check if `account_` already answer for `surveyId`.
     *
     * @param requiredNft_ address.
     * @param responser_ address.
     */
    function answered(address requiredNft_, address responser_) public view returns (bool) {
        return _answers[requiredNft_][responser_];
    }

    /***********************|
    |      Questions        |
    |______________________*/

    /**
     * @dev add a question in a survey.
     *
     * @param questionTitle_ questionTitle.
     * @param questionOptions_ string[].
     */
    function addQuestion(string memory questionTitle_, string[] memory questionOptions_) external onlyOperator {
        require(questionOptions_.length < 5, "MAX_5_OPTIONS");

        _surveys.questions.push();
        uint8 qId = uint8(_surveys.questions.length);

        Question storage nQuestion = _surveys.questions[qId - 1];
        nQuestion.id = qId;
        nQuestion.questionTitle = questionTitle_;

        for (uint256 i = 0; i < questionOptions_.length; i++) {
            nQuestion.options.push(Option({ id: uint8(i + 1), name: questionOptions_[i], answers: 0 }));
        }
    }

    /**
     * @dev add questions in a survey.
     *
     * @param questionTitles_[] questionTitle.
     * @param questionOptions_[[]] string[].
     */
    function addQuestions(string[] memory questionTitles_, string[][] memory questionOptions_) external onlyOperator {
        require(questionTitles_.length < 20, "MAX_20_QUESTIONS");
        require(questionTitles_.length == questionOptions_.length, "MISMATCH_LENGTHS");
        for (uint256 v = 0; v < questionOptions_.length; v++) {
            require(questionOptions_[v].length < 5, "MAX_5_OPTIONS");
        }
        for (uint256 q = 0; q < questionTitles_.length; q++) {
            _surveys.questions.push();
            uint8 qId = uint8(_surveys.questions.length);
            Question storage nQuestion = _surveys.questions[qId - 1];
            nQuestion.id = qId;
            nQuestion.questionTitle = questionTitles_[q];
            for (uint256 i = 0; i < questionOptions_[q].length; i++) {
                nQuestion.options.push(Option({ id: uint8(i + 1), name: questionOptions_[q][i], answers: 0 }));
            }
        }
    }

    /***********************|
    |      Internals        |
    |______________________*/

    /**
     * @dev check if an acoount has an ERC721
     * @param requiredNft_ survey id.
     * @param responser_ survey id.
     */
    function _isHolder(address requiredNft_, address responser_) internal view returns (bool) {
        bool isRequired;
        uint256 i;
        for (uint256 n = 0; n < _surveys.requiredNft.length; n++) {
            if (_surveys.requiredNft[n] == requiredNft_) {
                isRequired = true;
                i = n;
                break;
            }
        }
        require(isRequired, "NOT_VALID_REQUIRED_NFT");
        if (IERC721(_surveys.requiredNft[i]).balanceOf(responser_) > 0) return true;
        return false;
    }

    /**
     * @dev check if an account has balance for 1 answer
     */
    function _hasBalance() internal view returns (bool) {
        bool hasBalance;
        if (IERC20(_surveys.rewardToken).balanceOf(address(this)) >= _surveys.rewardAmount) hasBalance = true;
        return hasBalance;
    }
}

