import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "../lib/Operatorable.sol";

abstract contract NftSurveyBase is Operatorable, ReentrancyGuard {
    using SafeERC20 for IERC20;

    struct Survey {
        string surveyTitle;
        string surveyDescription;
        Question[] questions;
        uint256 rewardAmount;
        address rewardToken;
        uint256 startTime;
        uint256 endTime;
        address[] requiredNft;
        uint256 totalAnswers;
        bool isOpen;
    }

    struct Question {
        uint8 id;
        string questionTitle;
        Option[] options;
        // bool isRequired;
    }

    struct Option {
        uint8 id;
        string name;
        uint256 answers;
    }

    string public name;
    bool public paused;
    uint8 public surveyIds;

    event RewardDeposited(address indexed operator, address indexed rewardToken, uint256 amount);
    event Swept(address indexed operator, address indexed token, address indexed to, uint256 amount);

    /*************************|
    |    Deposit Rewards      |
    |________________________*/

    /**
     * @dev Deposit reward to the contract.
     * Requirements:
     *
     * - `amount` must not be zero
     * @param amount deposit amount.
     * @param rewardToken_ reward token address
     */
    function depositReward(address rewardToken_, uint256 amount) external onlyOperator {
        require(amount > 0, "ZERO_AMOUNT");
        require(IERC20(rewardToken_).balanceOf(msg.sender) >= amount, "INSUFFICIENT_BALANCE");
        require(IERC20(rewardToken_).allowance(msg.sender, address(this)) >= amount, "INSUFFICIENT_ALLOWANCE");
        IERC20(rewardToken_).safeTransferFrom(msg.sender, address(this), amount);

        emit RewardDeposited(msg.sender, rewardToken_, amount);
    }

    /*************************|
    |     Sweept Funds        |
    |________________________*/

    /**
     * @dev Sweep funds
     * Accessible by operators
     * @param token_ survey id.
     * @param to_ survey id.
     * @param amount_ survey id.
