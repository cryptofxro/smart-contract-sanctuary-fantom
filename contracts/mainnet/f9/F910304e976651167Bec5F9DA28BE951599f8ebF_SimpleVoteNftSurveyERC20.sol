    function sweep(
        address token_,
        address to_,
        uint256 amount_
    ) public onlyOperator {
        IERC20 token = IERC20(token_);
        // balance check is being done in ERC20
        token.safeTransfer(to_, amount_);
        emit Swept(msg.sender, token_, to_, amount_);
    }

    /***********************|
    |     Pause Contract    |
    |______________________*/

    /**
     * @dev pause or unpause the contract for answers
     * @param true_OR_false_ bool.
     */
    function pause(bool true_OR_false_) external onlyOperator {
        paused = true_OR_false_;
    }


    /**
     * @dev Check if `address_` is contract
     * @param address_ survey id.
     */
    function _isContract(address address_) internal view returns (bool) {
        uint256 size;

        assembly {
            size := extcodesize(address_)
        }
        return size > 0;
    }
}

