/**
 * Reflexions on trasfners: 12% tax on sent amount
 * Excludes an address from taxes: sender or recipients wont trigger a tax on transfer
 * e.g: sending to stakingContract or withdrawaing from stking pool wont trigger tax

 */

contract FundToken is ERC20, Ownable {

	uint256 public reflectRate = 8;
	uint256 public lifetimeReflections = 0;

    mapping(address => bool) private _taxExcluded;
	address public stakingContract; 
	address public bondingContract;

    constructor(
        address uniswapFactory,
        address uniswapRouter
    ) 
		ERC20("InDe.Fi", "INDE", 18) 
		Ownable() 
	{
        addTaxExcluded(owner());
        addTaxExcluded(address(this));

        IUniswapV2Router02 _router = IUniswapV2Router02(uniswapRouter);
        IUniswapV2Factory uniswapContract = IUniswapV2Factory(uniswapFactory);
        uniswapContract.createPair(address(this), _router.WETH());
    }


	function setStakingContract(address _stakingContract ) public onlyOwner(){
		stakingContract = _stakingContract;
		if( !isTaxExcluded(_stakingContract) ) addTaxExcluded(_stakingContract);
	}
	
	function setBondingContract(address _bondingContract ) public onlyOwner(){
		bondingContract = _bondingContract;
		if( !isTaxExcluded(_bondingContract) ) addTaxExcluded(_bondingContract);
	}
	


    function isTaxExcluded(address account) public view returns (bool) {
        return _taxExcluded[account];
    }

    function addTaxExcluded(address account) public onlyOwner() {
        _taxExcluded[account] = true;
    }

    function removeTaxExcluded(address account) public onlyOwner() {
        _taxExcluded[account] = false;
    }
	
	
	// Override transfer to take tax
    function transfer(
        address to,
        uint256 amount
    )
		public override 
		returns (bool)
	{
		// Base reflection tax
		uint tax = reflectRate * amount / 100;

		// If tax excluded: sender is owner, treasury, uniswap router.
		if ( isTaxExcluded(msg.sender) || isTaxExcluded(to) ) tax = 0;
		
		uint send = amount - tax;
		
        balanceOf[msg.sender] -= amount;
		unchecked {
            balanceOf[to] += send;
		}
		emit Transfer(msg.sender, to, send);
		
		if ( tax > 0 ){
			unchecked {
				balanceOf[stakingContract] += tax;
				lifetimeReflections += tax;
			}
			emit Transfer(msg.sender, stakingContract, tax);
        }
		
		return true;
	}
	

	
	function transferFrom(
        address from,
        address to,
        uint256 amount
    ) public override returns (bool) {
		// Base reflection tax
		uint tax = reflectRate * amount / 100;

		// If tax excluded: sender is owner, treasury, uniswap router.
		if ( isTaxExcluded(from) || isTaxExcluded(to) ) tax = 0;
		
		uint send = amount - tax;
        uint256 allowed = allowance[from][msg.sender]; // Saves gas for limited approvals.

        if (allowed != type(uint256).max) allowance[from][msg.sender] = allowed - amount;

        balanceOf[from] -= amount;
		unchecked {
            balanceOf[to] += send;
		}
		emit Transfer(from, to, send);
		
		if ( tax > 0 ){
			unchecked {
				balanceOf[stakingContract] += tax;
			}
			emit Transfer(from, stakingContract, tax);
        }

        return true;
    }
	
	
	function mint(address to, uint256 amount) public {
		require ( msg.sender == owner() || msg.sender == bondingContract, "UNAUTHORIZED_MINTING" );
		_mint(to, amount);
	}
	
	
	function burn(address from, uint256 amount) public onlyOwner() {
		_burn(from, amount);
	}
	
