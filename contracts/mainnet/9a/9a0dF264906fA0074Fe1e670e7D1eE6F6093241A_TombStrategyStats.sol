/*
 * @dev Abstraction of external yield strategies for launch farms
 */
contract TombStrategyStats is PriceCalculator {
	using SafeMath for uint256;
	using SafeERC20 for IERC20;

	// The staked token
	IERC20 public stakedToken;

	IMasterChargeSeconds public masterCharge;

	IStrategy public strategy;

	// Router to compute prices
	IPancakeRouter02 public router;

	// Path from single staking token or LP token0 to stable
	address[] public stakingTokenOrLP0ToStable;

	// Path from staked LP token1 to stable
	address[] public stakingLP1ToStable;

	// The path to convert reward to stable
	address[] public rewardToStablePath;

	// True is staked token is LP token
	bool public stakedIsLp;

	constructor(
		IMasterChargeSeconds _masterCharge,
		IStrategy _strategy,
		IERC20 _stakedToken,
		IPancakeRouter02 _router,
		address[] memory _stakingTokenOrLP0ToStable,
		address[] memory _stakingLP1ToStable,
		bool _stakedIsLp,
		address[] memory _rewardToStablePath
	) {
		masterCharge = _masterCharge;
		strategy = _strategy;
		stakedToken = _stakedToken;
		router = _router;
		stakingTokenOrLP0ToStable = _stakingTokenOrLP0ToStable;
		stakingLP1ToStable = _stakingLP1ToStable;
		stakedIsLp = _stakedIsLp;
		rewardToStablePath = _rewardToStablePath;
	}

	/*
	 * @notice Computes price of the staked token
	 *
	 */
	function stakedTokenPrice() external view returns (uint256) {
		return
			stakedIsLp
				? _getLPTokenPrice(
					router,
					stakingTokenOrLP0ToStable,
					stakingLP1ToStable,
					stakedToken
				)
				: _getTokenPrice(router, stakingTokenOrLP0ToStable);
	}

	/*
	 * @notice View function to see APR on frontend.
	 * @param _pid: pool id
	 * @return APR for pool
	 */
	function APR() external view returns (uint256) {
		if (block.timestamp > masterCharge.bonusEndTime()) {
			return 0;
		}

		uint256 reward = masterCharge.rewardPerSecond().mul(31536000);

		return
			TVL() > 0
				? (reward * _getTokenPrice(router, rewardToStablePath)) / TVL()
				: 0;
	}

	/*
	 * @notice View function to see TVL on frontend.
	 * @param _pid: pool id
	 * @return TVL for pool
	 */
	function TVL() public view returns (uint256) {
		return
			strategy.stakedLockedTotal().mul(strategy.stakedTokenPrice()).div(
				1e18
			);
	}
}

