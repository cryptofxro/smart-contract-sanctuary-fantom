pragma solidity ^0.8.10;



interface IAssetBox {
    function getRole(uint8 index) external view returns(address);
}

interface IAssetNPCERC20 {
    function transfer(uint8 roleIndex, uint from, uint to, uint amount) external;
    function transferCrossRace(uint8 fromRoleIndex, uint from, uint8 toRoleIndex, uint to, uint amount) external;
    function claim(uint8 roleIndex, uint tokenID, uint amount) external;
}

interface ICopperMigration {
    function withdrawal(uint8 roleIndex, uint tokenID) external;
}

contract MonsterHelperExecute {
    IAssetBox constant ab = IAssetBox(0x53d55024E171d4e80a319e237DBfd26041B86873);
    IERC20 constant mst = IERC20(0x152888854378201e173490956085c711f1DeD565);
    IAssetNPCERC20 constant ane = IAssetNPCERC20(0x6b5C0412CF82Cc26F9Ef7349E6f3c950314a80ad);
    ICopperMigration constant cm = ICopperMigration(0x1cEfFB110456106fdcd4f5Db0137c350fEbF8A81);

    constructor() {
        mst.approve(address(ane), type(uint256).max);
    }

    function multipleTransferNFT(uint8 roleIndex, uint256[] calldata tokenIds, address from, address to) external {
        address role = ab.getRole(roleIndex);
        for (uint256 i = 0; i < tokenIds.length; i++) {
            require(IERC721(role).ownerOf(tokenIds[i]) == msg.sender, "You must be owner of the NFT");
            IERC721(role).safeTransferFrom(from, to, tokenIds[i]);
        }
    }

    function multipleClaim(uint8 roleIndex, uint256[] calldata tokenIds, uint256 amount) external {
        for (uint256 i = 0; i < tokenIds.length; i++) {
            mst.transferFrom(msg.sender, address(this), amount * 1e18 / 500);
            ane.claim(roleIndex, tokenIds[i], amount);
        }
    }

    function multipleTransferCopper(uint8[] calldata roleList, uint256[] calldata tradeList) external {
        for (uint256 i = 0; i < tradeList.length / 3; i++) {
            address role = ab.getRole(roleList[i * 2]);
            require(IERC721(role).ownerOf(tradeList[i * 3]) == msg.sender, "You must be owner of the NFT");
            if (roleList[i * 2] == roleList[i * 2 + 1]) {
                ane.transfer(roleList[i * 2], tradeList[i * 3], tradeList[i * 3 + 1], tradeList[i * 3 + 2]);
            } else {
                ane.transferCrossRace(
                    roleList[i * 2],
                    tradeList[i * 3],
                    roleList[i * 2 + 1],
                    tradeList[i * 3 + 1],
                    tradeList[i * 3 + 2]
                );
            }
        }
    }

    function multipleCopperMigration(uint8 roleIndex, uint256[] calldata tokenIds) external {
        for (uint256 i = 0; i < tokenIds.length; i++) {
            cm.withdrawal(roleIndex, tokenIds[i]);
        }
    }
}