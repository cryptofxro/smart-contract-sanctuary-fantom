    uint256[] public revenuePercentage;

    event TotalFeeUpdated(uint256 newFee);
    event CallFeeUpdated(uint256 newCallFee, uint256 newTreasuryFee);

    function setRevenueReceivers(
        address[] memory _receivers,
        uint256[] memory _percentage
    ) external onlyOwner {
        require(_receivers.length == _percentage.length);
        uint256 sumPercentage = 0;
        for (uint256 i = 0; i < _percentage.length; i++) {
            sumPercentage += _percentage[i];
        }
        require(sumPercentage == PERCENT_DIVISOR, "Incorrect percentage");
        revenueReceivers = _receivers;
        revenuePercentage = _percentage;
    }

