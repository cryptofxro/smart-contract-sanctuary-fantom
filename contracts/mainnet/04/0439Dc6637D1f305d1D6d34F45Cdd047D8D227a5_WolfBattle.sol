pragma solidity ^0.8.15;




contract WolfBattle is IBattle, AccessControl, _BabyCreatureStorage {
    uint8 private constant CREATURE_ATTR_CLASS = 1;
    uint8 private constant CREATURE_ATTR_ALPHA = 11;
    uint8 private constant CREATURE_ATTR_FUR = 3;
    uint64 private constant WOLF_CLASS = 0;
    uint64 private constant CHANCE_BASE = 100;
    uint256 private constant ROUNDS = 3;
    address private _controller;
    _Delegator private _creatureAttributesDelegator;
    mapping(uint256 => uint256) private _experience;
    mapping(uint256 => uint256) private _strength;
    mapping(uint256 => bool) private _scaryFur;

    constructor(address controller, address creatureAttributesDelegator) {
        _controller = controller;
        _creatureAttributesDelegator = _Delegator(creatureAttributesDelegator);
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

    function getAlphaDelegate(uint256 attacker, uint256 defender)
        external
        view
        returns (uint64[4] memory params)
    {
        params[0] = _getAlpha(attacker);
        params[1] = _getAlpha(defender);
        params[2] = _getFur(attacker);
        params[3] = _getFur(defender);
    }

    function setController(address controller)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        _controller = controller;
    }

    function getController() external view returns (address) {
        return _controller;
    }

    function setCreatureAttributesDelegator(address creatureAttributesDelegator)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        _creatureAttributesDelegator = _Delegator(creatureAttributesDelegator);
    }

    function getCreatureAttributesDelegator() external view returns (address) {
        return address(_creatureAttributesDelegator);
    }

    function setStrength(uint256 alpha, uint256 strength)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        _strength[alpha] = strength;
    }

    function getStrength(uint256 alpha) external view returns (uint256) {
        return _strength[alpha];
    }

    function setScaryFur(uint256 fur, bool scary)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        _scaryFur[fur] = scary;
    }

    function getScaryFur(uint256 fur) external view returns (bool) {
        return _scaryFur[fur];
    }

    function getExperience(uint256[] calldata wolfId)
        external
        view
        returns (uint256[] memory experience)
    {
        experience = new uint256[](wolfId.length);
        for (uint256 i = 0; i < wolfId.length; i++) {
            experience[i] = _experience[wolfId[i]];
        }
    }

    function battle(uint256[] memory param)
        external
        override
        returns (bool won)
    {
        require(msg.sender == _controller, "Incorrect controller.");

        uint64[4] memory attributes = abi.decode(
            _creatureAttributesDelegator.delegateCall(
                address(this),
                0,
                abi.encode(param[3], param[4])
            ),
            (uint64[4])
        );

        if (_scaredByFur(attributes[2])) {
            _addExperience(param[3], attributes[0], true);
            return true;
        }

        if (_scaredByFur(attributes[3])) {
            _addExperience(param[4], attributes[1], true);
            return false;
        }

        uint256 chance = ((_strength[attributes[0]] + _experience[param[3]]) *
            CHANCE_BASE) /
            (_strength[attributes[0]] +
                _experience[param[3]] +
                _strength[attributes[1]] +
                _experience[param[4]]);

        uint256 _won = 0;
        for (uint64 i = 0; i < ROUNDS; i++) {
            if (_xorshift(i) % 100 <= chance) {
                _won++;
            }
        }

        won = _won > ROUNDS / 2;

        _addExperience(param[3], attributes[0], won);
        _addExperience(param[4], attributes[1], !won);
    }

    function _xorshift(uint64 seed) private view returns (uint16) {
        uint16 x = uint16(block.timestamp + seed);
        x ^= (x & 0x07ff) << 5;
        x ^= x >> 7;
        x ^= (x & 0x0003) << 14;
        return (x & 0xffff);
    }

    function _getAlpha(uint256 wolfId) private view returns (uint64) {
        BabyCreatureStorage storage _storage = babyCreatureStorage();
        uint64 class = _storage.creatureAttributesMap[wolfId][
            CREATURE_ATTR_CLASS
        ];

        require(class == WOLF_CLASS, "Not a wolf");

        uint64 alpha = _storage.creatureAttributesMap[wolfId][
            CREATURE_ATTR_ALPHA
        ];

        if (alpha == 0) {
            return 8;
        } else if (alpha == 1) {
            return 7;
        } else if (alpha == 2) {
            return 6;
        } else {
            return 5;
        }
    }

    function _getFur(uint256 wolfId) private view returns (uint64) {
        BabyCreatureStorage storage _storage = babyCreatureStorage();
        return _storage.creatureAttributesMap[wolfId][CREATURE_ATTR_FUR];
    }

    function _addExperience(
        uint256 wolfId,
        uint256 alpha,
        bool won
    ) private {
        if (won) {
            if (alpha == 8 || alpha == 7) {
                _experience[wolfId] += 1;
            } else {
                _experience[wolfId] += 2;
            }
        }
    }

    function _scaredByFur(uint64 fur) private view returns (bool) {
        if (_scaryFur[fur]) {
            return (_xorshift(fur) % 100) > 50;
        } else {
            return false;
        }
    }
}