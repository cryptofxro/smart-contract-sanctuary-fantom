        uint256 _pid,
        address _pool,
        IERC20Upgradeable[] calldata _rewardToken,
        uint256[] calldata _tokenPerBlock
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(!poolExists(_pool), "Pool exists");
        require(
            _rewardToken.length == _tokenPerBlock.length,
            "Array length mismatch"
        );

        pidToPool[_pid] = _pool;

        poolInfo[_pool] = PoolInfo({
            rewardToken: _rewardToken,
            numRewardTokens: _rewardToken.length,
            accTokenPerShare: new uint256[](_rewardToken.length),
            lastRewardBlock: block.number,
            tokenPerBlock: _tokenPerBlock
        });
    }

