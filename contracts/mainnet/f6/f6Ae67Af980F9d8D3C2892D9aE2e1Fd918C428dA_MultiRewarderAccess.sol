        address token,
        uint256 amount,
        address payable to
    ) public onlyRole(DEFAULT_ADMIN_ROLE) {
        if (token == address(0)) {
            to.transfer(amount);
        } else {
            IERC20Upgradeable(token).safeTransfer(to, amount);
        }
    }

