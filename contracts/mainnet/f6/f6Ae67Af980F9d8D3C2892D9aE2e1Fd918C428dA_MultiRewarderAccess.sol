    modifier onlyRole(bytes32 role) {
        require(hasRole(role, msg.sender), "MultiRewarder: INVALID_ROLE");
        _;
    }

    struct UserInfo {
        uint256 amount;
        uint256[] rewardDebt;
    }

    /// @notice Info of each pool on respective chef contracts.
