        uint256 _pid,
        address _user,
        uint256 _lpAmount
    ) external override {
        address _pool = pidToPool[_pid];
        PoolInfo storage p = poolInfo[_pool];
        require(msg.sender == chef, "Not chef contract");
        updatePool(_pool);

        UserInfo storage u = userInfo[_pool][_user];
        uint256 pendingBal;
        uint256 rewardBal;

        if (u.amount == 0 && u.rewardDebt.length == 0) {
            // initializing userRewardDebt
            u.rewardDebt = new uint256[](p.numRewardTokens);
        } else if (u.amount > 0) {
            // if user had deposited
            for (uint256 i = 0; i < p.numRewardTokens; i++) {
                // solhint-disable-next-line
                pendingBal = (
                    u.amount.mul(p.accTokenPerShare[i]).div(ACC_TOKEN_PRECISION)
                ).sub(u.rewardDebt[i]);
                rewardBal = p.rewardToken[i].balanceOf(address(this));
                p.rewardToken[i].safeTransfer(_user, pendingBal);
                emit OnReward(
                    _pool,
                    address(p.rewardToken[i]),
                    _user,
                    pendingBal
                );
            }
        }

        u.amount = _lpAmount;

        for (uint256 i = 0; i < p.numRewardTokens; i++) {
            // solhint-disable-next-line
            u.rewardDebt[i] = u.amount.mul(p.accTokenPerShare[i]).div(
                ACC_TOKEN_PRECISION
            );
        }
    }

    /// @notice View function to see pending tokens
    /// @param _pid Address of pool
    /// @param _user Address of user.
    function pendingTokens(uint256 _pid, address _user)
        external
        view
        returns (
            IERC20Upgradeable[] memory rewardTokens,
            uint256[] memory rewardAmounts
        )
    {
        address _pool = pidToPool[_pid];
        if (!poolExists(_pool)) {
            return (new IERC20Upgradeable[](0), new uint256[](0));
        }
        PoolInfo memory p = poolInfo[_pool];
        UserInfo memory u = userInfo[_pool][_user];
        if (u.amount == 0 && u.rewardDebt.length == 0) {
            return (p.rewardToken, new uint256[](p.numRewardTokens));
        }

        uint256[] memory _rewardAmounts = new uint256[](p.numRewardTokens);
        uint256 lpSupply = getLPSupply(_pool);
        uint256[] memory _accTokenPerShare = p.accTokenPerShare;

        if (lpSupply != 0) {
            uint256 blocks = block.number.sub(p.lastRewardBlock);
            for (uint256 i = 0; i < p.numRewardTokens; i++) {
                uint256 tokenReward = blocks.mul(p.tokenPerBlock[i]);
                // solhint-disable-next-line
                _accTokenPerShare[i] = p.accTokenPerShare[i].add(
                    (tokenReward.mul(ACC_TOKEN_PRECISION).div(lpSupply))
                );
                // solhint-disable-next-line
                _rewardAmounts[i] = (
                    u.amount.mul(_accTokenPerShare[i]).div(ACC_TOKEN_PRECISION)
                ).sub(u.rewardDebt[i]);
            }
        }
        return (p.rewardToken, _rewardAmounts);
    }

    /// @notice View function to see if pool exists
    /// @param _pool Address of pool
    function poolExists(address _pool) public view returns (bool) {
        if (poolInfo[_pool].numRewardTokens == 0) {
            return false;
        }
        return true;
    }

    /// @notice View function to see if pool exists
    /// @param _pid Pool ID on chef contract
    function poolExists(uint256 _pid) external view override returns (bool) {
        if (pidToPool[_pid] == address(0)) {
            return false;
        }
        return true;
    }
}

