    /// @param _pool Pool to update
    function updatePool(address _pool) public {
        PoolInfo storage p = poolInfo[_pool];
        if (block.number > p.lastRewardBlock) {
            uint256 lpSupply = getLPSupply(_pool);

            if (lpSupply > 0) {
                uint256 blocks = block.number.sub(p.lastRewardBlock);
                for (uint256 i = 0; i < p.numRewardTokens; i++) {
                    uint256 tokenReward = blocks.mul(p.tokenPerBlock[i]);
                    // solhint-disable-next-line
                    p.accTokenPerShare[i] = p.accTokenPerShare[i].add(
                        (tokenReward.mul(ACC_TOKEN_PRECISION).div(lpSupply))
                    );
                }
            }

            p.lastRewardBlock = block.number;
        }
    }

