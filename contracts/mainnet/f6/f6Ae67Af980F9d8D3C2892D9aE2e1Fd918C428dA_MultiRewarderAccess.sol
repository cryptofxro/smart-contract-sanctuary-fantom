pragma solidity 0.6.12;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./interfaces/IMintableCollection.sol";
import "./interfaces/IBurnableERC20.sol";
import "@openzeppelin/contracts-upgradeable-v3.4.2/math/SafeMathUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable-v3.4.2/proxy/Initializable.sol";
import "@openzeppelin/contracts-upgradeable-v3.4.2/access/OwnableUpgradeable.sol";

contract TrancheRedeemV3 is Initializable, OwnableUpgradeable {
    using SafeMathUpgradeable for uint256;

    struct Redemption {
        uint256 deiAmount;
        // Redemption tranche
        uint8 tranche;
    }

    struct Tranche {
        // Boosted to 1e6
        uint256 USDRatio;
        uint256 amountRemaining;
        // Boosted to 1e6
        uint256 deusRatio;
        uint256 endTime;
    }

    address public treasury;
    address public deusNFT;
    address public deiToken;
    // Redemption stable
    address public usdToken;
    uint256 public usdTokenDecimals;
    uint256 public redemptionFee;
    uint256 public currentTokenId;
    uint8 public currentTranche;
    bool public redeemPaused;
    // Deus NFT tokenId to redemption data
    mapping(uint256 => Redemption) public redemptions;
    mapping(uint8 => Tranche) public tranches;

    uint256 private constant BOOST = 1e6;
    uint256 public constant DEUS_TO_USDC = 6;

    // vDEUS tokenId to USDC redeemed
    mapping(uint256 => uint256) public redeemAmounts;
    uint256 public deiBurned;

    function initialize() public initializer {
        __Ownable_init();
    }

    // To be called after stablecoins reserves have been sent to the contract
    function addTranche(
        uint8 _tranche,
        uint256 _USDRatio,
        uint256 _amountRemaining,
        uint256 _deusRatio,
        uint256 _duration
    ) external onlyOwner {
        tranches[_tranche] = Tranche({
            USDRatio: _USDRatio,
            amountRemaining: _amountRemaining,
            deusRatio: _deusRatio,
            endTime: getBlockTimestamp().add(_duration)
        });
        currentTranche = _tranche;
    }

    function setRedeemState(bool _redeemPaused) external onlyOwner {
        redeemPaused = _redeemPaused;
    }

    function setParameters(
        address _treasury,
        address _deusNFT,
        address _deiToken,
        address _usdToken,
        uint256 _usdTokenDecimals,
        uint256 _redemptionFee
    ) external onlyOwner {
        treasury = _treasury;
        deusNFT = _deusNFT;
        deiToken = _deiToken;
        usdToken = _usdToken;
        usdTokenDecimals = _usdTokenDecimals;
        redemptionFee = _redemptionFee;
    }

    function setCurrentTokenId(uint256 currentTokenId_) external onlyOwner {
        currentTokenId = currentTokenId_;
    }

    function setTranche(uint8 _currentTranche) external onlyOwner {
        currentTranche = _currentTranche;
    }

    function redeemDEI(uint256 _amount) external {
        require(!redeemPaused, "DynamicRedeemer: Paused");
        Tranche storage t = tranches[currentTranche];
        require(
            getBlockTimestamp() < t.endTime,
            "DynamicRedeemer: Tranche over"
        );
        uint256 usdToSend = usdRedeemValue(_amount);
        require(
            usdToSend <= t.amountRemaining,
            "DynamicRedeemer: Not enough reserves remaining in tranche"
        );

        deiBurned = deiBurned.add(_amount);
        t.amountRemaining = t.amountRemaining.sub(usdToSend);
        IBurnableERC20(deiToken).burnFrom(msg.sender, _amount);
        uint256 fee = usdToSend.mul(redemptionFee).div(BOOST);
        IERC20(usdToken).transfer(treasury, fee);
        uint256 usdAmountMinusFee = usdToSend.sub(fee);
        IERC20(usdToken).transfer(msg.sender, usdAmountMinusFee);

        redemptions[currentTokenId] = Redemption({
            deiAmount: _amount,
            tranche: currentTranche
        });

        redeemAmounts[currentTokenId] = usdAmountMinusFee;

        // Mint NFT
        IMintableCollection(deusNFT).mint(msg.sender, currentTokenId);
        currentTokenId++;
    }

    function emergencyWithdraw(
        address _token,
        address _to,
        uint256 _amount
    ) external onlyOwner {
        IERC20(_token).transfer(_to, _amount);
    }

    // Returns the USD value being redeemed per DEI, boosted by 1e6
    function usdRedeemPerDEI() public view returns (uint256) {
        return 0;
    }

    // USD value of vDEUS per DEI boosted by 1e6
    function deusRedeemPerDEI() external view returns (uint256) {
        return 1000000;
    }

    // Returns the USD value being redeemed for specific DEI amount, boosted by 1e6
    function usdRedeemValue(uint256 amount) public view returns (uint256) {
        return 0;
    }

    // USD value of vDEUS boosted by 1e6
    function deusRedeemValue(uint256 amount) external view returns (uint256) {
        return amount * 1000000;
    }

    function getBlockTimestamp() internal view returns (uint256) {
        // solium-disable-next-line security/no-block-members
        return block.timestamp;
    }
}

