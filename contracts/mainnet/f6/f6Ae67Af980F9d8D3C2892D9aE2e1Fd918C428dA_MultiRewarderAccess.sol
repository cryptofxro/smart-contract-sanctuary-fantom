        external
        onlyRole(SETTER_ROLE)
    {
        updatePool(_pool);

        PoolInfo storage p = poolInfo[_pool];
        uint256[] memory oldRate = p.tokenPerBlock;
        require(
            p.numRewardTokens == _tokenPerBlock.length,
            "tokenperblock length incorrect"
        );
        p.tokenPerBlock = _tokenPerBlock;

        for (uint256 i = 0; i < p.numRewardTokens; i++) {
            emit RewardRateUpdated(
                _pool,
                address(p.rewardToken[i]),
                oldRate[i],
                _tokenPerBlock[i]
            );
        }
    }

