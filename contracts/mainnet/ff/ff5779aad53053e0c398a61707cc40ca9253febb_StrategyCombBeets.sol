    address public constant WANT = 0xf3A602d30dcB723A74a0198313a7551FEacA7DAc;

    // contracts
    address public constant CHEF = 0x6e547e6Ab873146eA1E4A12499b0e98Bc18Ea222;
    address public constant BEETHOVENX_ROUTER = 0x20dd72Ed959b6147912C2e529F0a0C651c33c9ce;
    address public constant SPIRIT_ROUTER = 0x16327E3FbDaCA3bcF7E38F5Af2599D2DDc33aE52;
    address public constant COMB = 0xaE45a827625116d6C0C40B5D7359EcF68F8e9AFD;
    address public constant WFTM = 0x21be370D5312f44cB42ce377BC9b8a0cEF1A4C83;
    address public constant USDC = 0x04068DA6C83AFCFA0e13ba15A6696662335D5B75;

    bytes32 public wantPoolId = 0xf3a602d30dcb723a74a0198313a7551feaca7dac00010000000000000000005f;

    address[] public lpTokens;

    address public vault;
    uint256 public totalProfit;
    uint256 public lastHarvest;
    uint256 public minInputComb;
    uint256 public minInputWftm;
    // uint256 public altPercent;

    // Routes
    address[] public combToWftmRoute;
    address[] public combToAltRoute;

    // IBalancerVault2.JoinPoolRequest JoinPoolRequest = IBalancerVault2.JoinPoolRequest;

    event Deposit(uint256 tvl);
    event Withdraw(uint256 tvl);

    modifier ownerOrVault() {
        require(msg.sender == vault || msg.sender == owner(), "not owner or vault");
        _;
    }

    constructor(address _vault) {
        vault = _vault;
        totalProfit = 0;
        // altPercent = 0;
        minInputComb = 432233000000;
        minInputWftm = 100000000000000;
        combToWftmRoute = [COMB, WFTM];
        combToAltRoute = [COMB, WFTM, USDC];

        (lpTokens, , ) = IBalancerVault2(BEETHOVENX_ROUTER).getPoolTokens(wantPoolId);
        setRelayerApproval(0xC852F984CA3310AFc596adeB17EfcB0542646920);
        _giveAllowances();
    }

    // puts the funds to work
    function deposit() public whenNotPaused {
        IMasterChef(CHEF).deposit(PID, balanceOfWant(), address(this));
        emit Deposit(balanceOf());
    }

    function withdraw(uint256 _amount) external ownerOrVault {
        IMasterChef(CHEF).withdraw(PID, _amount, address(this));

        IERC20(WANT).safeTransfer(vault, balanceOfWant());

        emit Withdraw(balanceOf());
    }

    function withdrawAlt() external onlyOwner {
        inCaseTokensGetStuck(alt());
    }

    function managerHarvest() external onlyOwner {
        deposit();
        inCaseTokensGetStuck(COMB);
    }

    function harvest() external virtual {
        _harvest();
    }

    // compounds earnings and charges performance fee
    function _harvest() internal {
        harvestComb();
        // swapAlt();
        swapComb();
        addLiquidity();
        uint256 wantBal = balanceOfWant();
        deposit();
        totalProfit += wantBal;
        lastHarvest = block.timestamp;
    }

    function harvestComb() public virtual {
        IMasterChef(CHEF).harvest(PID, address(this));
    }

    // function swapAlt() internal {
    //     uint256 combBal = IERC20(COMB).balanceOf(address(this)).mul(altPercent).div(1000);

    //     if (combBal > minInputComb) {
    //         IUniswapRouterETH(SPIRIT_ROUTER).swapExactTokensForTokens(
    //             combBal,
    //             0,
    //             combToAltRoute,
    //             address(this),
    //             block.timestamp
    //         );
    //     }
    // }

    function swapComb() internal {
        uint256 combBal = IERC20(COMB).balanceOf(address(this));

        if (combBal > minInputComb) {
            IUniswapRouterETH(SPIRIT_ROUTER).swapExactTokensForTokens(
                combBal,
                0,
                combToWftmRoute,
                address(this),
                block.timestamp
            );
        }
    }

    // Adds liquidity to AMM and gets more LP tokens.
    function addLiquidity() internal {
        uint256 wftmBal = IERC20(WFTM).balanceOf(address(this));
        if (wftmBal > minInputWftm) {
            balancerJoin(wantPoolId, WFTM, wftmBal);
        }
    }

    function balancerJoin(
        bytes32 _poolId,
        address _tokenIn,
        uint256 _amountIn
    ) internal {
        uint256[] memory amounts = new uint256[](lpTokens.length);
        for (uint256 i = 0; i < amounts.length; i++) {
            amounts[i] = lpTokens[i] == _tokenIn ? _amountIn : 0;
        }
        bytes memory userData = abi.encode(1, amounts, 1);

        IBalancerVault2.JoinPoolRequest memory request = IBalancerVault2.JoinPoolRequest(
            lpTokens,
            amounts,
            userData,
            false
        );
        IBalancerVault2(BEETHOVENX_ROUTER).joinPool(_poolId, address(this), address(this), request);
    }

    // calculate the total underlaying 'want' held by the strat.
    function balanceOf() public view returns (uint256) {
        return balanceOfWant().add(balanceOfPool());
    }

    // it calculates how much 'want' this contract holds.
    function balanceOfWant() public view returns (uint256) {
        return IERC20(WANT).balanceOf(address(this));
    }

    // it calculates how much 'want' the strategy has working in the farm.
    function balanceOfPool() public view returns (uint256) {
        (uint256 _amount, ) = IMasterChef(CHEF).userInfo(PID, address(this));
        return _amount;
    }

    // calculate balance in underlying token
    function balanceInTokens() public view returns (uint256[] memory tokens) {
        uint256 totalSupply = IBalancerPool(WANT).totalSupply();
        (, uint256[] memory balances, ) = IBalancerVault2(BEETHOVENX_ROUTER).getPoolTokens(
            wantPoolId
        );
        for (uint256 i = 0; i < balances.length; i++) {
            tokens[i] = uint256(balances[i]).mul(balanceOf()).div(totalSupply);
        }
    }

    // calculate profit in underlying token
    function profitInTokens() public view returns (uint256[] memory tokens) {
        uint256 totalSupply = IBalancerPool(WANT).totalSupply();
        (, uint256[] memory balances, ) = IBalancerVault2(BEETHOVENX_ROUTER).getPoolTokens(
            wantPoolId
        );
        for (uint256 i = 0; i < balances.length; i++) {
            tokens[i] = uint256(balances[i]).mul(totalProfit).div(totalSupply);
        }
    }

    // returns rewards unharvested
    function rewardsAvailable() public view returns (uint256) {
        return IMasterChef(CHEF).pendingComb(PID, address(this));
    }

    function alt() public view returns (address) {
        return combToAltRoute[combToAltRoute.length - 1];
    }

    // function balanceOfAlt() public view returns (uint256) {
    //     return IERC20(alt()).balanceOf(address(this));
    // }

    // ADMIN FUNCTIONS

    function setVault(address _vault) external onlyOwner {
        vault = _vault;
    }

    // function setAltPercent(uint256 _altPercent) external onlyOwner {
    //     require(_altPercent <= 1000, "must be 1 - 1000");
    //     altPercent = _altPercent;
    // }

    function setMinInputComb(uint256 _minInputComb) external onlyOwner {
        minInputComb = _minInputComb;
    }

    function setMinInputWftm(uint256 _minInputWftm) external onlyOwner {
        minInputWftm = _minInputWftm;
    }

    function setCombToWftmRoute(address[] memory _combToWftmRoute) external onlyOwner {
        require(_combToWftmRoute[0] == COMB, "combToWftmRoute[0] != comb");
        require(
            _combToWftmRoute[_combToWftmRoute.length - 1] == WFTM,
            "combToWftmRoute[last] != lpToken0"
        );
        combToWftmRoute = _combToWftmRoute;
    }

    function setCombToAltRoute(address[] memory _combToAltRoute) external onlyOwner {
        require(_combToAltRoute[0] == COMB, "combToAltRoute[0] != comb");
        combToAltRoute = _combToAltRoute;
    }

    // EMERGENCY FUNCTIONS

    function panic() public onlyOwner {
        pause();
        retireStrat();
    }

    function pause() public onlyOwner {
        _pause();
        _removeAllowances();
    }

    function unpause() external onlyOwner {
        _unpause();

        _giveAllowances();

        deposit();
    }

    function retireStrat() public ownerOrVault {
        IMasterChef(CHEF).emergencyWithdraw(PID, address(this));
        IERC20(WANT).transfer(vault, balanceOfWant());
    }

    function retireStratBackup() public ownerOrVault {
        IMasterChef(CHEF).emergencyWithdraw(PID);
        IERC20(WANT).transfer(vault, balanceOfWant());
    }

    function inCaseTokensGetStuck(address _token) public onlyOwner {
        uint256 amount = IERC20(_token).balanceOf(address(this));
        IERC20(_token).safeTransfer(owner(), amount);
    }

    function inCaseFTMGetStuck() external onlyOwner {
        (bool success, ) = payable(owner()).call{ value: address(this).balance }("");
        require(success, "Transfer failed.");
    }

    // ALLOWANCES

    function setRelayerApproval(address relayer) public onlyOwner {
        IBalancerVault2(BEETHOVENX_ROUTER).setRelayerApproval(address(this), relayer, true);
    }

    function _giveAllowances() internal {
        IERC20(WANT).safeApprove(CHEF, type(uint256).max);
        IERC20(COMB).safeApprove(SPIRIT_ROUTER, type(uint256).max);

        IERC20(WFTM).safeApprove(BEETHOVENX_ROUTER, 0);
        IERC20(WFTM).safeApprove(BEETHOVENX_ROUTER, type(uint256).max);
    }

    function _removeAllowances() internal {
        IERC20(WANT).safeApprove(CHEF, 0);
        IERC20(COMB).safeApprove(SPIRIT_ROUTER, 0);
        IERC20(WFTM).safeApprove(BEETHOVENX_ROUTER, 0);
    }
}