/**
 * @title Helper contract meant to be delegate-called by deployer to link and initiate upgrades atomically
 * @author 0xDAO
 */

contract BigMigrationHelper is OxDAODeployer {
    function updateProtocol(
        address voterProxyImpAddress,
        address voterProxyAssetsAddress,
        address voterProxyAssetsImpAddress
    ) external {
        IOxLens oxLens = IOxLens(
            address(0xDA00137c79B30bfE06d04733349d98Cf06320e69)
        );
        address voterProxyAddress = oxLens.voterProxyAddress();
        // address voterProxyAssetsAddress = address(0);

        // link proxy to new implementations
        IProxy(voterProxyAddress).updateImplementationAddress(
            voterProxyImpAddress
        );

        IProxy(voterProxyAssetsAddress).updateImplementationAddress(
            voterProxyAssetsImpAddress
        );

        // mstore interfaces
        IVoterProxy voterProxy = IVoterProxy(voterProxyAddress);
        IVoterProxyAssets voterProxyAssets = IVoterProxyAssets(
            voterProxyAssetsAddress
        );

        // initializeProxyStorage for voterProxyAssets
        voterProxyAssets.initializeProxyStorage(
            oxLens.veAddress(),
            voterProxy.veDistAddress(),
            voterProxyAddress,
            oxLens.rewardsDistributorAddress()
        );
        voterProxyAssets.approveSolidToVoterProxy();

        // setup voterProxyAssetsAddress in voterProxy
        voterProxy.setVoterProxyAssetsAddress(voterProxyAssetsAddress);

        // set voterProxyAssetsAddress as an operator for rewardsDistributor
        IRewardsDistributor rewardsDistributor = IRewardsDistributor(
            oxLens.rewardsDistributorAddress()
        );
        if (!rewardsDistributor.operator(voterProxyAssetsAddress)) {
            rewardsDistributor.setOperator(voterProxyAssetsAddress, true);
        }
    }
}

