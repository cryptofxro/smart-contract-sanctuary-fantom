    function active() external view override returns (bool){
        return _isActive;
    }

    function saleCount() external view override returns (uint256){
        return _requestCounter;
    }

    function avatarToken() external view override returns (address) {
        return address(_avatarToken);
    }

    function requestPurchase() external payable override nonReentrant {
        require(_msgSender() != address(0), "Avatar Sale: AddressZero cannot purchase.");
        require(_isActive, "Avatar Sale: Sale is not active.");
        require(msg.value >= (price() + _serviceFee), "Avatar Sale: Insufficient funds.");


        // handle purchase
        if(msg.value > price()){
            payable(_msgSender()).transfer(msg.value -  (price() + _serviceFee));
        }

        // create purchase request
        PurchaseRequest memory request = PurchaseRequest(
                                            _msgSender(),
                                            address(0),
                                            block.timestamp,
                                            0,
                                            0,
                                            RequestStatus.OPEN
                                        );
        _idToPurchaseRequest[_requestCounter] = request;

        emit PurchaseRequested(_msgSender(), _requestCounter);
        _tokenPrice = price();
        _requestCounter = _requestCounter + 1;
    }


    function getRequest(uint256 requestId) external override view validRequestId(requestId) returns (PurchaseRequest memory) {
        return _idToPurchaseRequest[requestId];
    }

    function acceptRequest(uint256 requestId, string memory metadataId) external override validRequestId(requestId) openRequest(requestId) onlyRole(ROLE_VALIDATE) {

        PurchaseRequest memory request = _idToPurchaseRequest[requestId];
        request.validateTimestamp = block.timestamp;
        request.validator = _msgSender();

       // mint pgj
        _pgjContract.mint(request.requestor, _pgjId, _pgjPerSale);

        // mint avatar
        uint256 avatarId = _avatarToken.mint(request.requestor, metadataId, new uint256[](0));
        request.avatar = avatarId;
        request.status = RequestStatus.CLOSED;

        emit RequestAccepted(request.requestor, _msgSender(), requestId);
        _idToPurchaseRequest[requestId] = request;

        // send service fee to validator
        _sendServiceFee();
    }

    /* Admin section */
    function activate() external onlyRole(ROLE_SUPER_ADMIN) {
        _isActive = true;
    }

    function deactivate() external onlyRole(ROLE_SUPER_ADMIN) {
        _isActive = false;
    }

    function withdrawFunds() external onlyRole(ROLE_SUPER_ADMIN) {
        payable(owner()).transfer(address(this).balance);
    }

    function setFee(uint256 newFee) external onlyRole(ROLE_SUPER_ADMIN){
        _setServiceFee(newFee);
    }

    /* destroy contract */
    function destroy() public onlyRole(ROLE_SUPER_ADMIN) {
        selfdestruct( payable(owner()));
    }

