}

contract Factory is Ownable {
    INFT private TARGET;
    uint256 public feeUSD;
    IERC20Metadata public USDC = IERC20Metadata(0x04068DA6C83AFCFA0e13ba15A6696662335D5B75);
    AggregatorV3Interface public chainlinkOracle = AggregatorV3Interface(0xf4766552D15AE4d256Ad41B6cf2933482B0680dc);

    /****** PUBLIC METHODS ******/

    function create(
        string memory name,
        string memory symbol,
        uint256 maxSupply,
        uint256 mintPrice,
        uint256 maxMint,
        address paymentToken
    ) public payable returns (address) {
        require(msg.value == create_price(), "caller supplied wrong value");
        INFT instance = INFT(TARGET.create(name, symbol, maxSupply, mintPrice, maxMint, paymentToken));
        instance.transferOwnership(_msgSender());
        return address(instance);
    }

    function decimals() public view returns (uint8) {
        return USDC.decimals();
    }

    // returns price in FTM
    function create_price() public view returns (uint256) {
        return quote(feeUSD);
    }

    function quote(uint256 usdc) public view returns (uint256) {
        uint256 normalizedUSDC = usdc * 10**(18 - decimals());
        (, int256 answer, , , ) = chainlinkOracle.latestRoundData();
        uint256 normalizedOracle = uint256(answer) * 10**(18 - chainlinkOracle.decimals());
        return _divide(normalizedUSDC, normalizedOracle, 2) * 10**16;
    }

    /****** MANAGEMENT METHODS ******/

    function setChainlinkOracle(address oracle) public onlyOwner {
        chainlinkOracle = AggregatorV3Interface(oracle);
    }

    function setFeeUSD(uint256 fee) public onlyOwner {
        feeUSD = fee;
    }

    function setUSDC(address usdc) public onlyOwner {
        USDC = IERC20Metadata(usdc);
    }

    function setTarget(address target) public onlyOwner {
        TARGET = INFT(target);
    }

    function withdraw() public onlyOwner {
        (bool sent, ) = owner().call{ value: address(this).balance }("");
        require(sent, "could not withdraw funds");
    }

    /****** INTERNAL METHODS ******/

    function _divide(
        uint256 a,
        uint256 b,
        uint8 precision
    ) internal pure returns (uint256) {
        return (a * (10**precision)) / b;
    }
}