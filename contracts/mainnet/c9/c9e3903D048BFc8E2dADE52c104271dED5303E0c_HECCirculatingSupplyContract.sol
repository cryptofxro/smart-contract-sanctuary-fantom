contract HECCirculatingSupplyContract is Ownable {
	using SafeMath for uint;

	bool public isInitialized;

	address public HEC;
	address[] public nonCirculatingHECAddresses;

	constructor(address _hec) {
		require(isInitialized == false);

		HEC = _hec;

		isInitialized = true;
	}

	function HECCirculatingSupply() external view returns (uint) {
		uint _totalSupply = IERC20(HEC).totalSupply();

		uint _circulatingSupply = _totalSupply.sub(getNonCirculatingHEC());

		return _circulatingSupply;
	}

	function getNonCirculatingHEC() public view returns (uint) {
		uint _nonCirculatingHEC;

		for (uint i = 0; i < nonCirculatingHECAddresses.length; i = i.add(1)) {
			_nonCirculatingHEC = _nonCirculatingHEC.add(IERC20(HEC).balanceOf(nonCirculatingHECAddresses[i]));
		}

		return _nonCirculatingHEC;
	}

	function setNonCirculatingHECAddresses(address[] calldata _nonCirculatingAddresses) external onlyOwner returns (bool) {
		nonCirculatingHECAddresses = _nonCirculatingAddresses;

		return true;
	}
}