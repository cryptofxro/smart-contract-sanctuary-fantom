contract ConceptsRoyalties is Ownable{
    
    using SafeMath for uint256;

    ERC1155 Concepts = ERC1155(0xE6Ac0F262b30F20816086bBF6744CA7B4c3d9c50);
    
    uint256 SHARDshare = 77;
    uint256 MAINshare = 60;

    struct Holder {
        address owner;
        uint256 percentage;
    }

    mapping(uint256 => Holder) public NFT;
    mapping(uint256 => bool) public royaltyBearing;

    address TNN = 0x3e05c7FFfEfe9030523c1eb14E50ace5B0da9Cf7;
    
    uint256 SCOPE = 100;

    constructor() payable {
        NFT[1].percentage = 2;
        NFT[3].percentage = 2;
        NFT[5].percentage = 2;

        royaltyBearing[1] = true;
        royaltyBearing[3] = true;
        royaltyBearing[5] = true;

        NFT[1].owner = 0x00cbC670EfC807b020C6118812A8B45677A9c3c9;
        NFT[3].owner = 0x5bFaad4A04Ab0Fab6d206c9ea1144da886d31f9a;
        NFT[5].owner = 0x3e05c7FFfEfe9030523c1eb14E50ace5B0da9Cf7;
    }

    receive() external payable {}
    
    function registerOwner(uint256 tokenId) public {
        require(Concepts.balanceOf(msg.sender, tokenId) > 0, "You do not own the specified tokenId");
        require(royaltyBearing[tokenId], "This tokenId does not qualify for royalties");
        NFT[tokenId].owner = msg.sender;
    }

    function setPercentage(uint256 index, uint256 P) public onlyOwner {
        NFT[index].percentage = P;
    }

    function setTNN(address A) public onlyOwner {
        TNN = A;
    }
    
    function withDrawRoyalties() public {
        uint256 balance = address(this).balance;
        require(balance > 0, "Contract is currently empty");

        uint256 balanceA = balance.mul(NFT[1].percentage).div(SCOPE);
        uint256 balanceB = balance.mul(NFT[3].percentage).div(SCOPE);
        uint256 balanceC = balance.mul(NFT[5].percentage).div(SCOPE);
        uint256 balanceD = balance.sub(balanceA).sub(balanceB).sub(balanceC);

        payable(NFT[1].owner).transfer(balanceA);
        payable(NFT[3].owner).transfer(balanceB);
        payable(NFT[5].owner).transfer(balanceC);
        payable(TNN).transfer(balanceD);
    }
}