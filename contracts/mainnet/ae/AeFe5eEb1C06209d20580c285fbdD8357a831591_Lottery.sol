contract Lottery is Ownable, ReentrancyGuard, VRFV2WrapperConsumerBase{
    using SafeMath for uint256;
    using SafeMath32 for uint32;

    struct TicketInfo{
        uint256 sticketNo;
        uint256 eticketNo;
        address user;
    }

    uint256 public prizePoolG1 = 0;

    ERC1155Token erc1155;

    IERC20 public usdt;

    uint256 public lastIndexG1 = 0;

    uint256 public noOfEntrants = 0;

    uint256 public currentRoundG1 = 1;

    uint256 public day = 1 days;
    
    uint256 public timeCloseG1 = block.timestamp.add(day.div(2));

    bool public roundG1Locked = false;

    uint256 public ticketCost =  1e6;

    uint256 public referralPercentage = 0;

    uint256 public transactionFee = 35;

    uint256 public NFTSharingFee = 900;

    bool public referralEnabled = false;

    address public treasury;

    address public NFTTreasuryFeeSharing;
    
    bool public lotteryInProgress;

    uint256 public nftIndex = 0;

    mapping(uint256 => TicketInfo[]) public game1ToTicketNo;

    mapping(uint256 => uint256) public nftShareEntitled;

    mapping(uint256 => uint256) public nftClaimPosition; 

    mapping(address => address) public referral;

    mapping(uint256 => mapping(address => bool)) public hasEntered;

    mapping(uint256 => uint256) public requestIdToDraw;

    event buyTicket(address user, uint256 sTicketNo, uint256 eTicketNo);

    event LotteryResult(uint256 requestId, address winner, uint256 winningNo);

    event LotteryRequest(uint256 requestId);


    struct LotteryStatus{
        uint256 randomWord;
        address winner;
        uint256 winningNo;
        bool fulfilled;
        uint256 prize;
    }

    uint32 internal callbackGasLimit = 100000;
    uint32 constant numWords = 1;
    uint16 constant requestConfirmation = 3;

    mapping(uint256 => LotteryStatus) public statuses;

    //testnet
    // address constant linkAddress = 0xfaFedb041c0DD4fA2Dc0d87a6B0979Ee6FA7af5F;
    // address constant vrfWrapperAddress = 0x38336BDaE79747a1d2c4e6C67BBF382244287ca6;

    address constant linkAddress = 0x6F43FF82CCA38001B6699a8AC47A2d0E66939407;
    address constant vrfWrapperAddress = 0xeDA5B00fB33B13c730D004Cf5D1aDa1ac191Ddc2;

    constructor(address _nftsharingAddress, address _usdtAddress, address _erc1155) VRFV2WrapperConsumerBase(linkAddress, vrfWrapperAddress){
        treasury = msg.sender;
        NFTTreasuryFeeSharing = _nftsharingAddress;
        usdt = IERC20(_usdtAddress);
        erc1155 = ERC1155Token(_erc1155);

    }

    function changeCallBackGasLimit(uint32 _callbackGasLimit) public onlyOwner{
        callbackGasLimit = _callbackGasLimit;
    }

    function changeNFTSharingAddress(address _newAddress) public onlyOwner{
        _revertZeroAddress(_newAddress);
        NFTTreasuryFeeSharing = _newAddress;
    }

    function changeTreasury(address _newTreasury) public onlyOwner{
        _revertZeroAddress(_newTreasury);
        treasury = _newTreasury;
    }

    function changeTicketCost(uint256 _newCost) public onlyOwner{
        ticketCost = _newCost;
    }

    function changeSharingFee(uint256 _newFee) public onlyOwner{
        require(_newFee <= 1000, "cannot be more than 1000");
        NFTSharingFee = _newFee;
    }

    function changeTransactionFee(uint256 _newFee) public onlyOwner{
        require(_newFee <= 1000, "cannot be more than 1000");
        transactionFee = _newFee;
    }

    function changeReferralFee(uint256 _newFee) public onlyOwner{
        require(_newFee <= 1000, "cannot be more than 1000");
        referralPercentage = _newFee;
    }

    function changeReferralStatus(bool _status) public onlyOwner{
        referralEnabled = _status;
    }

    function changeLotteryProgress(bool _status) public onlyOwner{
        lotteryInProgress = _status;
    }

    //set contract as creator first
    function buyNFT(uint256 _quantity) public nonReentrant{

        uint256 nftCost = 100e18;
        uint256 totalCost = nftCost.mul(_quantity);
        require(usdt.balanceOf(msg.sender) >= totalCost, "insufficient funds");
        usdt.transferFrom(msg.sender,treasury,totalCost);
        uint256[] memory amounts = new uint256[](_quantity);
        uint256[] memory ids = new uint256[](_quantity);

        for(uint i = 0 ; i < _quantity ; i ++){
            amounts[i] = 1;
            nftIndex = nftIndex.add(1);
            ids[i] = nftIndex;
            nftClaimPosition[nftIndex] = currentRoundG1;
        }

        erc1155.mintBatch(msg.sender,ids,amounts);
    }

    function viewLotteryStatus(uint256 requestId) public view returns(uint256 randomWord, address winner, uint256 winningNo, bool fulfilled, uint256 prize) {
        randomWord = statuses[requestId].randomWord;
        winner = statuses[requestId].winner;
        winningNo = statuses[requestId].winningNo;
        fulfilled = statuses[requestId].fulfilled;
        prize = statuses[requestId].prize;
    }

    function viewTicketInfoList(uint256 gameRound) public view returns (TicketInfo[] memory){
        return game1ToTicketNo[gameRound];
    }

    function setClosingTime(uint256 _closingTime) public onlyOwner{
        timeCloseG1 = _closingTime;
    }

    function buyTicketG1(uint256 _noOfTicket, address _referee) external nonReentrant {
        require(msg.sender == tx.origin, "smart contract are not allowed");
        if(block.timestamp > timeCloseG1){
            roundG1Locked = true;
        }
        require(!roundG1Locked, "Game 1 Round 1 is Locked");
        require(_noOfTicket > 0, "no of ticket cannot be empty");

        uint256 noOfTicket = _noOfTicket;

        if(_referee != address(0) && _referee != msg.sender && referral[_referee] == address(0) ){
            referral[msg.sender] = _referee;
        }

         uint256 amountToPool = ticketCost.mul(noOfTicket);
         address actualReferer = referral[msg.sender];

         if(actualReferer != address(0) && referralEnabled){
            uint256 refererRewards = amountToPool.mul(referralPercentage).div(1000);
            amountToPool = amountToPool.sub(refererRewards);
            usdt.transferFrom(msg.sender,actualReferer,refererRewards);
         }

         game1ToTicketNo[currentRoundG1].push(
            TicketInfo(
                lastIndexG1,
                lastIndexG1.add(_noOfTicket).sub(1),
                msg.sender
            )
         );
        lastIndexG1 = lastIndexG1.add(_noOfTicket);

        if(!hasEntered[currentRoundG1][msg.sender]){
            hasEntered[currentRoundG1][msg.sender] = true;
            noOfEntrants = noOfEntrants.add(1);
        }

        usdt.transferFrom(msg.sender,address(this),amountToPool);
        prizePoolG1 = prizePoolG1.add(amountToPool);
    }

    function startLotteryG1() public nonReentrant returns(uint256) {
        if(block.timestamp > timeCloseG1){
            roundG1Locked = true;
        }
        require(roundG1Locked, "round must be close");
        require(!lotteryInProgress, "Lottery in progress");
        uint256 requestId = requestRandomness(callbackGasLimit, requestConfirmation, numWords);
        requestIdToDraw[currentRoundG1] = requestId;
        statuses[requestId] = LotteryStatus({
            randomWord: 0,
            winner: address(0),
            winningNo: 0,
            fulfilled: false,
            prize: 0    
        });
        lotteryInProgress = true;
        emit LotteryRequest(requestId);
        return requestId;

    }

    function processLottery () public nonReentrant{
        require(roundG1Locked, "round must be close");
        require(lotteryInProgress, "Lottery in progress");
        uint256 requestId = requestIdToDraw[currentRoundG1];
        require(statuses[requestId].fulfilled, "request not fulfilled yet");
        uint256 value = uint256(statuses[requestId].randomWord.mod(lastIndexG1));
        statuses[requestId].prize = prizePoolG1;
        uint256 winningIndex = _findUpperBound(game1ToTicketNo[currentRoundG1],value);

        uint256 amountTransactionFeeDistribute = prizePoolG1.mul(transactionFee).div(1000);
        prizePoolG1 = prizePoolG1.sub(amountTransactionFeeDistribute);
        
        uint256 amountToNFTHolders = amountTransactionFeeDistribute.mul(NFTSharingFee).div(1000);
        amountTransactionFeeDistribute = amountTransactionFeeDistribute.sub(amountToNFTHolders);
        
        statuses[requestId].winningNo = value;
        
        statuses[requestId].winner = game1ToTicketNo[currentRoundG1][winningIndex].user;
        usdt.transfer(game1ToTicketNo[currentRoundG1][winningIndex].user,prizePoolG1);
        usdt.transfer(NFTTreasuryFeeSharing,amountToNFTHolders);
        _updateNFTSharing(amountToNFTHolders);
        usdt.transfer(treasury,amountTransactionFeeDistribute);


        currentRoundG1  = currentRoundG1.add(1);
        lastIndexG1 = 0;
        timeCloseG1 = block.timestamp.add(day.div(2));
        roundG1Locked = false;
        noOfEntrants = 0;
        prizePoolG1 = 0;
        lotteryInProgress = false;
    }

    function fulfillRandomWords(uint256 requestId, uint256[] memory randomWords) internal override{

        statuses[requestId].fulfilled = true;
        statuses[requestId].randomWord = randomWords[0];
        
    }

    function _updateNFTSharing(uint256 _amount) internal{ 
        if(nftIndex != 0){
            nftShareEntitled[currentRoundG1] = _amount.div(nftIndex);
        }
    }

    function redeemShares(uint256[] memory ids) public nonReentrant{
        for(uint j = 0 ; j < ids.length ; j++){
        require(erc1155.balanceOf(msg.sender,ids[j]) > 0,"user not owner of nft");
        uint256 lastCheckPoint = nftClaimPosition[ids[j]];
            for(uint256 i = lastCheckPoint; i < currentRoundG1 ; i++){
                usdt.transferFrom(treasury,msg.sender,nftShareEntitled[i]);
            }
        nftClaimPosition[ids[j]] = currentRoundG1;    
        }
        
    }
  
    function _findUpperBound(TicketInfo[] storage array, uint256 element) internal view returns (uint256) {
        require(array.length != 0, "There must be participants for lottery");
        uint256 low = 0; 
        uint256 high = array.length; // 2

        while (low < high) {
            uint256 mid = Math.average(low, high);

            // Note that mid will always be strictly less than high (i.e. it will be a valid array index)
            // because Math.average rounds down (it does integer division with truncation).
            if (array[mid].sticketNo > element  && array[mid].eticketNo > element ) {
                high = mid;
            } else { 
                low = mid + 1;
            }
        }

        // At this point `low` is the exclusive upper bound. We will return the inclusive upper bound.
        if (low > 0 && array[low - 1].sticketNo <= element && array[low - 1].eticketNo >= element) {
            return low - 1;
        } else {
            return low;
        }
}   

    function _revertZeroAddress(address _address) private pure {
        require(_address != address(0), ":ZERO_ADDRESS");
    }

    function _nonZeroAddr(address _address) private pure returns (address) {
        _revertZeroAddress(_address);
        return _address;
    }

    function safe32(uint256 n) private pure returns (uint32) {
        require(n < 2**32, ":UNSAFE_UINT32");
        return uint32(n);
    }

    function transferLinkOut(uint256 _amount) public onlyOwner{
        IERC20(linkAddress).transfer(treasury,_amount);
    }

    function changeRoundStatus(bool status) public onlyOwner{
        roundG1Locked = status;
    }

    function changeERC1155TokenAddress(address _newAddress) public onlyOwner{
        erc1155 = ERC1155Token(_newAddress);
    }

    function restartNFTIndex(uint256 _newIndex) public onlyOwner{
        nftIndex = _newIndex;
    }

}

