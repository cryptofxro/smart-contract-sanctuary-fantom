     * @dev Emitted when a new raffle instance is created
     */
    event RaffleInstanceCreated(address);

    constructor(address _raffleImplementationContract) public {
        raffleImplementationContract = _raffleImplementationContract;
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

    /**
     * @dev updates the raffleImplementationContract address
     */
    function updateRaffleImplementationContract(
        address _raffleImplementationContract
    ) public {
        require(hasRole(DEFAULT_ADMIN_ROLE, msg.sender));
        require(_raffleImplementationContract != address(0), "e33");
        raffleImplementationContract = _raffleImplementationContract;
    }

    /**
     * @dev deploys a new raffle instance. must be called by admin with encoded params for raffle initialize()
     */
    function deployRaffle(bytes memory _data) public returns (address) {
        require(hasRole(DEFAULT_ADMIN_ROLE, msg.sender));
        address proxy = deployMinimal(raffleImplementationContract, _data);
        deployedRaffles[deployedRafflesCount] = proxy;
        deployedRafflesCount = deployedRafflesCount.add(1);
        deployedRafflesRegistry[proxy] = 1;
        deployedRafflesRegistryStatus[proxy] = uint256(Status.CREATED);
        deployedRafflesRegistryStatusCount[
            uint256(Status.CREATED)
        ] = deployedRafflesRegistryStatusCount[uint256(Status.CREATED)].add(1);
        emit RaffleInstanceCreated(proxy);
        return proxy;
    }

    function updateRaffleStatus(uint256 _status) external onlyIfRegistered {
        deployedRafflesRegistryStatusCount[
            deployedRafflesRegistryStatus[msg.sender]
        ] = deployedRafflesRegistryStatusCount[
            deployedRafflesRegistryStatus[msg.sender]
        ].sub(1);
        deployedRafflesRegistryStatus[msg.sender] = _status;
        deployedRafflesRegistryStatusCount[
            _status
        ] = deployedRafflesRegistryStatusCount[_status].add(1);
    }

