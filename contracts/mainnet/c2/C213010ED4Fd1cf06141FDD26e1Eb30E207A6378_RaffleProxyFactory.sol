    using EnumerableSet for EnumerableSet.AddressSet;

    enum Status {
        CREATED,
        STARTED,
        ENDED,
        CLOSED
    }

    struct RoleData {
        EnumerableSet.AddressSet members;
        bytes32 adminRole;
    }

    mapping(bytes32 => RoleData) private _roles;

    bytes32 public constant DEFAULT_ADMIN_ROLE = 0x00;

    address internal raffleImplementationContract;

    mapping(uint256 => address) internal deployedRaffles;
    uint256 internal deployedRafflesCount;

    mapping(address => uint256) internal deployedRafflesRegistry;
    mapping(address => uint256) internal deployedRafflesRegistryStatus;
    mapping(uint256 => uint256) internal deployedRafflesRegistryStatusCount;

    /**
     * @dev Emitted when `newAdminRole` is set as ``role``'s admin role, replacing `previousAdminRole`
     *
