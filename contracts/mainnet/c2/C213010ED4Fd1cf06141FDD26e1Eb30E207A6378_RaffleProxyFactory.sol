        return deployedRaffles[id];
    }

    function getAllRaffles() external view returns (address[] memory) {
        address[] memory ret = new address[](deployedRafflesCount);
        for (uint256 i = 0; i < deployedRafflesCount; i++) {
            ret[i] = deployedRaffles[i];
        }
        return ret;
    }

