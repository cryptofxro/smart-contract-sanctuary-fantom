        external
        view
        returns (address[] memory)
    {
        address[] memory ret = new address[](
            deployedRafflesRegistryStatusCount[_status]
        );
        uint256 retCounter;
        for (uint256 i = 0; i < deployedRafflesCount; i++) {
            if (deployedRafflesRegistryStatus[deployedRaffles[i]] == _status) {
                ret[retCounter++] = deployedRaffles[i];
            }
        }
        return ret;
    }

