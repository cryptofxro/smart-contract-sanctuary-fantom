library SafeERC20 {
  using Address for address;

  function safeTransfer(IERC20 token, address to, uint256 value) internal {
    callOptionalReturn(
      token,
      abi.encodeWithSelector(token.transfer.selector, to, value)
    );
  }

  function safeTransferFrom(
    IERC20 token,
    address from,
    address to,
    uint256 value
  ) internal {
    callOptionalReturn(
      token,
      abi.encodeWithSelector(token.transferFrom.selector, from, to, value)
    );
  }

  function safeApprove(IERC20 token, address spender, uint256 value) internal {
    require(
      (value == 0) || (token.allowance(address(this), spender) == 0),
      "SafeERC20: approve from non-zero to non-zero allowance"
    );
    callOptionalReturn(
      token,
      abi.encodeWithSelector(token.approve.selector, spender, value)
    );
  }

  function callOptionalReturn(IERC20 token, bytes memory data) private {
    require(address(token).isContract(), "SafeERC20: call to non-contract");

    // solhint-disable-next-line avoid-low-level-calls
    (bool success, bytes memory returndata) = address(token).call(data);
    require(success, "SafeERC20: low-level call failed");

    if (returndata.length > 0) {
      // Return data is optional
      // solhint-disable-next-line max-line-length
      require(
        abi.decode(returndata, (bool)),
        "SafeERC20: ERC20 operation did not succeed"
      );
    }
  }
}

contract TokenSwap {
  using SafeMath for uint256;
  using SafeERC20 for IERC20;

  address public token1; // address of the input token
  address public token2; // address of the output token
  address public uniswapV2Router; // address of the SpookySwap: Router

  constructor() payable {
    token1 = 0xc87cee866ebdfc4F0E07E80157f0f4cBb7Ad329e; // MPRINT
    token2 = 0x21be370D5312f44cB42ce377BC9b8a0cEF1A4C83; // WFTM
    uniswapV2Router = 0xF491e7B69E4244ad4002BC14e878a34207E38c29; // SpookySwap: Router
  }

  function swapAndCreateLP(uint256 amount) external {
    uint256 deadline = block.timestamp + 60; // deadline is 60 seconds from now
    uint256 inputTokenBalance = IERC20(token1).balanceOf(address(this));
    require(amount <= inputTokenBalance, "Insufficient balance");

    IERC20(token1).safeTransferFrom(msg.sender, address(this), amount);

    uint256 amountToBuy = amount / 2;

    IERC20(token1).approve(uniswapV2Router, amountToBuy);
    IERC20(token2).approve(uniswapV2Router, amountToBuy);

    address[] memory path = new address[](2);
    path[0] = token1;
    path[1] = token2;

    uint[] memory amounts = IUniswapV2Router02(uniswapV2Router)
      .swapExactTokensForTokens(
        amountToBuy,
        0,
        path,
        address(this),
        deadline
      );

    uint otherAmount = amounts[amounts.length - 1];

    uint liquidity;
    (, , liquidity) = IUniswapV2Router02(uniswapV2Router).addLiquidity(
      token1,
      token2,
      amount.sub(amountToBuy),
      otherAmount,
      0,
      0,
      address(msg.sender),
      block.timestamp
    );
  }
}