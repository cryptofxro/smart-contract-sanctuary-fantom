// NFT Interface
interface EasyClubNFTs {
    function balanceOf(address _address) external view returns (uint256);

    function ownerOf(uint256 _tokenId) external view returns (address);
}

// CONTRACT STARTS HERE
contract VIPProfitDistributor is Ownable {
    using SafeERC20 for IERC20;

    EasyClubNFTs easyClubContract =
        EasyClubNFTs(0x5d6f546f2357E84720371A0510f64DBC3FbACe33); // Contract address of EasyClubNFTs

    // NFT data
    address[] public holders;
    uint256 public holderCount;
    mapping(address => bool) public isHolder;
    mapping(address => uint256) public walletNFTs;

    // VIP data
    uint256 public vipCount;
    uint256 public vipNFTcount;
    uint256 public rewardPerNFT;

    // Processing 1: All NFTs
    function _processNFT(uint256 tokenId) internal {
        address NFTOwner = easyClubContract.ownerOf(tokenId);

        if (!isHolder[NFTOwner]) {
            isHolder[NFTOwner] = true;
            holders.push(NFTOwner);
            holderCount += 1;
        }

        walletNFTs[NFTOwner] += 1;
    }

    function processNFTs(uint256 start, uint256 stop) public onlyOwner {
        for (uint256 i = start; i < stop; i++) {
            _processNFT(i);
        }
    }

    // Processing 2: All holders
    function _processHolder(uint256 holderIndex) internal {
        address holder = holders[holderIndex];
        uint256 holderNFTs = walletNFTs[holder];

        if (holderNFTs >= 5) {
            vipCount += 1;
            vipNFTcount += holderNFTs;
        }
    }

    function processHolders(uint256 start, uint256 stop) public onlyOwner {
        for (uint256 i = start; i < stop; i++) {
            _processHolder(i);
        }
    }

    // Processing 3: Calculate reward
    function calculateReward(uint256 _amount) public onlyOwner {
        rewardPerNFT = _amount / vipNFTcount;
    }

    
    // Distribution
    function distributeRewardsDirectly(uint32 _start, uint32 _end)
        external
        onlyOwner
    {
        for (uint32 _i = _start; _i < _end; _i++) {
            // Calculate the reward
            address _currentHolder = holders[_i];
            uint256 _nftCount = walletNFTs[_currentHolder];

            if(_nftCount >= 5) {
                IERC20(0x04068DA6C83AFCFA0e13ba15A6696662335D5B75).safeTransferFrom(
                    msg.sender,
                    _currentHolder,
                    rewardPerNFT * _nftCount
                );
            }
        }
    }
}