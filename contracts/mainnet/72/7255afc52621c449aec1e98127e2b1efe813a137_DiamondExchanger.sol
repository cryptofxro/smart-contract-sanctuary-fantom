contract DiamondExchanger {
    using SafeMath for uint256;
    using SafeToken for address;

    address public immutable admin;
    address public immutable diamond;
    uint256 public MAX_FTM_DEPOSIT = 10000 ether;
    uint256 public MIN_FTM_DEPOSIT = 150 ether;

    mapping(address => uint256) public userDepositFTM;
    mapping(address => uint256) public userClaimedDiamond;

    uint256 public price = 3 ether;        

    event Deposit(
        address indexed sender,
        uint amount
    );

    constructor(address admin_, address diamond_) {
        admin = admin_;
        diamond = diamond_;
    }

    receive() external payable {
        revert("DiamondExchanger: BAD_CALL");
    }

    function deposit() external payable {
        require(msg.value >= MIN_FTM_DEPOSIT, "DiamondExchanger: INVALID_VALUE");        // minium is 150 FTM
        require(msg.value <= MAX_FTM_DEPOSIT, "DiamondExchanger: INVALID_VALUE");        // maxium is 3K FTM

        uint amount = msg.value.mul(10 ** 18).div(price);
        require(amount <= IERC20(diamond).balanceOf(address(this)), "DiamondExchanger: Diamond balancer not sufficient");

        userDepositFTM[msg.sender] = userDepositFTM[msg.sender].add(msg.value);

        IERC20(diamond).transfer(msg.sender, amount);
        userClaimedDiamond[msg.sender] = userClaimedDiamond[msg.sender].add(amount);
        
        emit Deposit(msg.sender, msg.value);
    }

    function getBalanceOfDiamond() public view returns (uint256) {
        return IERC20(diamond).balanceOf(address(this));
    }

    function getFundAmount() public view returns(uint256) {
        return address(this).balance;
    }

    function setDiamondPrice(uint256 _rate) public {
        require(msg.sender == admin, "DiamondExchanger: UNAUTHORIZED");
        price = _rate;
    }

    function setMaxDepositAmount(uint256 _amount) public {
        require(msg.sender == admin, "DiamondExchanger: UNAUTHORIZED");
        MAX_FTM_DEPOSIT = _amount;
    }

    function setMinDepositAmount(uint256 _amount) public {
        require(msg.sender == admin, "DiamondExchanger: UNAUTHORIZED");
        MIN_FTM_DEPOSIT = _amount;
    }

    /**
     * @dev It allows the admin to withdraw FTM sent to the contract by the users, 
     * only callable by owner.
     */
    function withdrawFTM() public {
        require(msg.sender == admin, "DiamondExchanger: UNAUTHORIZED");
        require(address(this).balance > 0, "No balance of ETH.");
        require(payable(msg.sender).send(address(this).balance));
    } 
}