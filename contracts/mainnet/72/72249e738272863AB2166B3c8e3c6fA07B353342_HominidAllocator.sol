pragma solidity 0.8.4;

// import "contracts/interfaces/IAllocator.sol";
// import "contracts/interfaces/ISpookyChef.sol";
// import "contracts/interfaces/ERC20/IERC20.sol";
// import "contracts/libraries/math/SafeMath.sol";

contract HominidAllocator is IAllocator {
    using SafeMath for uint256;

    address public BOO;
    address public policy;
    address public treasury;
    address public spooky;

    mapping(address => bool) public poolEnabled;
    mapping(address => uint256) public poolPid;

    function initialize(
        address _BOO,
        address _policy,
        address _treasury,
        address _spooky
    ) external {
        require(treasury == address(0), "already initialized");

        BOO = _BOO;
        policy = _policy;
        treasury = _treasury;
        spooky = _spooky;
    }

    function allocate(address _lpToken, uint256 _amount) external override {
        if (poolEnabled[_lpToken]) {
            IERC20(_lpToken).transferFrom(msg.sender, address(this), _amount);

            IERC20(_lpToken).approve(spooky, 0);
            IERC20(_lpToken).approve(spooky, _amount);
            ISpookyChef(spooky).deposit(poolPid[_lpToken], _amount);

            IERC20(BOO).transfer(treasury, IERC20(BOO).balanceOf(address(this)));

            emit Allocated(_lpToken, msg.sender, _amount);
        }
    }

    // in case some thing went wrong, treasury will withdraw all LP tokens from Spooky
    function treasuryWithdraw(address _lpToken) external override {
        require(msg.sender == treasury, "only treasury");
        ISpookyChef(spooky).emergencyWithdraw(poolPid[_lpToken]);
        IERC20(_lpToken).transfer(treasury, IERC20(_lpToken).balanceOf(address(this)));
    }

    function add(uint256 _pid) external {
        require(msg.sender == policy, "only policy");

        (address lpToken, , , ) = ISpookyChef(spooky).poolInfo(_pid);
        poolEnabled[lpToken] = true;
        poolPid[lpToken] = _pid;

        emit PoolUpdated(_pid, lpToken, true);
    }

    function togglePool(address _lpToken) external {
        poolEnabled[_lpToken] = !poolEnabled[_lpToken];
        emit PoolUpdated(poolPid[_lpToken], _lpToken, poolEnabled[_lpToken]);
    }
}