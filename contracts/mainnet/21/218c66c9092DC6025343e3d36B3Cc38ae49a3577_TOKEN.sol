pragma solidity 0.8.13;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import 'contracts/interfaces/ITOKEN.sol';
import 'contracts/interfaces/IVTOKEN.sol';
import 'contracts/interfaces/IRewarder.sol';
import 'contracts/interfaces/IOTOKEN.sol';

contract TOKENFees {
    using SafeERC20 for IERC20;

    address public rewarder;

    address public immutable _TOKEN;
    address public immutable _BASE;
    address public immutable _OTOKEN;

    event DistributedTOKEN(uint256 amount);
    event DistributedBASE(uint256 amount);
    event DistributedOTOKEN(uint256 amount);
    event RewarderSet(address indexed account);

    constructor(address __TOKEN, address __BASE, address __OTOKEN) {
        _TOKEN = __TOKEN;
        _BASE = __BASE;
        _OTOKEN = __OTOKEN;
    }

    function distribute() external {
        distributeBASE();
        distributeTOKEN();
        distributeOTOKEN();
    }

    function distributeBASE() public {
        address _treasury = ITOKEN(_TOKEN).treasury();
        uint256 balanceBASE = IERC20(_BASE).balanceOf(address(this));
        uint256 amountDistro = balanceBASE / 2;

        IERC20(_BASE).approve(rewarder, amountDistro);
        IRewarder(rewarder).notifyRewardAmount(_BASE, amountDistro);
        IERC20(_BASE).safeTransfer(_treasury, amountDistro);
        emit DistributedBASE(amountDistro);
    }

    function distributeTOKEN() public {
        address _treasury = ITOKEN(_TOKEN).treasury();
        uint256 balanceTOKEN = IERC20(_TOKEN).balanceOf(address(this));
        uint256 amountDistro = balanceTOKEN / 2;

        IERC20(_TOKEN).approve(rewarder, amountDistro);
        IRewarder(rewarder).notifyRewardAmount(_TOKEN, amountDistro);
        IERC20(_TOKEN).safeTransfer(_treasury, amountDistro);
        emit DistributedTOKEN(amountDistro);
    }

    function distributeOTOKEN() public {
        uint256 balanceOTOKEN = IERC20(_OTOKEN).balanceOf(address(this));

        IERC20(_OTOKEN).approve(rewarder, balanceOTOKEN);
        IRewarder(rewarder).notifyRewardAmount(_OTOKEN, balanceOTOKEN);
        emit DistributedOTOKEN(balanceOTOKEN);
    }

    function setRewarder(address _rewarder) external {
        require(_rewarder != address(0), "!Valid");
        require(msg.sender == _TOKEN, "!TOKEN");
        rewarder = _rewarder;
        emit RewarderSet(_rewarder);
    }

}

contract TOKEN is ERC20, ReentrancyGuard, Ownable {
    using SafeERC20 for IERC20;

    // Addresses
    address public immutable BASE;      // BASE Token Contract
    address public immutable OTOKEN;    // OTOKEN Token contract (call option on TOKEN, no expiry, strike is floor price of bonding curve)
    address public VTOKEN;              // Staking Contract for TOKEN and OTOKEN
    address public immutable fees;      // Fee Contract
   
    address public treasury;

    // Bonding Curve Variables

    //  _____________________
    // |           |        /|
    // |           |       / |
    // |           |      /  |
    // |           |     /   |
    // |           |    /    |
    // |           |   /     |              
    // |           |  /      |            
    // |           | /       |         
    // |___________|/        |
    // | FLOOR     | MARKET  |         
    // | RESERVE   | RESERVE |   
    // |___________|_________| 
    // |<----Cf--->|<---Cm-->|

    uint256 public frBASE;           // Floor Reserves BASE
    uint256 public mrvBASE;          // Market Reserves Virtual BASE
    uint256 public mrrBASE;          // Market Reserves Real BASE
    uint256 public mrrTOKEN;         // Market Reserves TOKEN
    uint256 public marketMaxTOKEN;   // Max TOKEN allowed in Market Reserves

    // Borrow Variables
    uint256 public debtTotal;
    mapping(address => uint256) public debt;

    // Fee
    uint256 constant FEE = 20;
    uint256 constant PROVIDER = 2000;
    uint256 constant DIVISOR = 10000;

    bool VTOKENFirstSet = false;

    // Events
    event Buy(address indexed user, address indexed to, uint256 amount);
    event Sell(address indexed user, address indexed to, uint256 amount);
    event Exercise(address indexed user, address indexed to, uint256 amount);
    event Redeem(address indexed user, address indexed to, uint256 amount);
    event Borrow(address indexed user, uint256 amount);
    event Repay(address indexed user, uint256 amount);
    event VTOKENSet(address indexed account);
    event TreasurySet(address indexed account);

    constructor(
        address _BASE,
        address _OTOKEN,
        uint256 _supplyTOKEN,
        address _treasury
        ) ERC20("TOKEN", "TOKEN") {
            BASE = _BASE;
            OTOKEN = _OTOKEN;
            mrvBASE = _supplyTOKEN;
            mrrTOKEN = _supplyTOKEN;
            marketMaxTOKEN = _supplyTOKEN;
            treasury = _treasury;
            _mint(address(this), _supplyTOKEN);
            fees = address(new TOKENFees(address(this), BASE, OTOKEN));
    }

    //////////////////
    ///// Public /////
    //////////////////

    function currentPrice() public view returns (uint256) {
        return ((mrvBASE + mrrBASE) * 1e18) / mrrTOKEN;
    }

    function floorPrice() public pure returns (uint256) {
        return 1e18;
    }

    function OTOKENPrice() public view returns (uint256) {
        return currentPrice() - floorPrice();
    }

    function sellMax() public view returns (uint256) {
        return (mrrTOKEN * mrrBASE / mrvBASE) * DIVISOR / (DIVISOR - FEE);
    }

    function tvl() public view returns (uint256) {
        return frBASE + mrvBASE + mrrBASE + (mrrTOKEN * currentPrice() / 1e18);
    }

    function borrowCreditBASE(address account) public view returns (uint256) {
        return (IVTOKEN(VTOKEN).balanceOfTOKEN(account) - debt[account]); // make sure this is just the balance of TOKEN deposited, OTOKEN deposits should not add borrowing power
    }

    ////////////////////
    ///// External /////
    ////////////////////

    function buy(uint256 _amountBASE, uint256 _minTOKEN, uint256 _expireTimestamp, address _to, address _provider) public nonReentrant {
        require(_amountBASE > 0, "!Zero");
        require(_expireTimestamp == 0 || _expireTimestamp > block.timestamp, "Expired");

        address account = msg.sender;

        uint256 feeBASE = _amountBASE * FEE / DIVISOR;
        uint256 oldMrBASE = mrvBASE + mrrBASE;
        uint256 newMrBASE = oldMrBASE + _amountBASE - feeBASE;
        uint256 oldMrTOKEN = mrrTOKEN;
        uint256 newMrTOKEN = oldMrBASE * oldMrTOKEN / newMrBASE;
        uint256 outTOKEN = oldMrTOKEN - newMrTOKEN;

        require(outTOKEN > _minTOKEN, "Less than Min");

        mrrBASE = newMrBASE - mrvBASE;
        mrrTOKEN = newMrTOKEN;

        if (_provider != address(0)) {
            uint256 providerFee = feeBASE * PROVIDER / DIVISOR;
            IERC20(BASE).safeTransferFrom(account, _provider, providerFee);
            IERC20(BASE).safeTransferFrom(account, fees, feeBASE - providerFee);
        } else {
            IERC20(BASE).safeTransferFrom(account, fees, feeBASE);
        }
        IERC20(BASE).safeTransferFrom(account, address(this), _amountBASE - feeBASE);
        IERC20(address(this)).safeTransfer(_to, outTOKEN);

        emit Buy(account, _to, _amountBASE);
    }

    function sell(uint256 _amountTOKEN, uint256 _minBASE, uint256 _expireTimestamp, address _to, address _provider) external nonReentrant {
        require(_amountTOKEN > 0, "!Zero");
        require(_expireTimestamp == 0 || _expireTimestamp > block.timestamp, "Expired");

        address account = msg.sender;

        uint256 feeTOKEN = _amountTOKEN * FEE / DIVISOR;
        uint256 oldMrTOKEN = mrrTOKEN;
        uint256 newMrTOKEN = mrrTOKEN + _amountTOKEN - feeTOKEN;
        require(newMrTOKEN <= marketMaxTOKEN, "Exceeds Market Reserves");

        uint256 oldMrBASE = mrvBASE + mrrBASE;
        uint256 newMrBASE = oldMrBASE * oldMrTOKEN / newMrTOKEN;
        uint256 outBASE = oldMrBASE - newMrBASE;

        require(outBASE > _minBASE, "Less than Min");

        mrrBASE = newMrBASE - mrvBASE;
        mrrTOKEN = newMrTOKEN;

        if (_provider != address(0)) {
            uint256 providerFee = feeTOKEN * PROVIDER / DIVISOR;
            IERC20(address(this)).safeTransferFrom(account, _provider, providerFee);
            IERC20(address(this)).safeTransferFrom(account, fees, feeTOKEN - providerFee);
        } else {
            IERC20(address(this)).safeTransferFrom(account, fees, feeTOKEN);
        }
        IERC20(address(this)).safeTransferFrom(account, address(this), _amountTOKEN - feeTOKEN);
        IERC20(BASE).safeTransfer(_to, outBASE);

        emit Sell(account, _to, _amountTOKEN);
    }

    function exercise(uint256 _amountOTOKEN, address _to) external nonReentrant {
        require(_amountOTOKEN > 0, "!Zero");
        address account = msg.sender;
        frBASE += _amountOTOKEN;
        IOTOKEN(OTOKEN).burnFrom(account, _amountOTOKEN);
        IERC20(BASE).safeTransferFrom(account, address(this), _amountOTOKEN);
        _mint(_to, _amountOTOKEN);

        emit Exercise(account, _to, _amountOTOKEN);
    }

    function redeem(uint256 _amountTOKEN, address _to) external nonReentrant {
        require(_amountTOKEN > 0, "!Zero");
        address account = msg.sender;
        frBASE -= _amountTOKEN;
        _burn(account, _amountTOKEN);
        IERC20(BASE).safeTransfer(_to, _amountTOKEN);

        emit Redeem(account, _to, _amountTOKEN);
    }

    function borrow(uint256 _amountBASE) external nonReentrant {
        require(_amountBASE > 0, "!Zero");
        address account = msg.sender;
        uint256 credit = borrowCreditBASE(account);
        require(credit >= _amountBASE, "Borrow Underflow");
        debt[account] += _amountBASE;
        debtTotal += _amountBASE;
        uint256 feeBASE = _amountBASE * FEE / DIVISOR;
        IERC20(BASE).safeTransfer(fees, feeBASE);
        IERC20(BASE).safeTransfer(account, _amountBASE - feeBASE);
        emit Borrow(account, _amountBASE);
    }

    function repay(uint256 _amountBASE) external nonReentrant {
        require(_amountBASE > 0, "!Zero");
        address account = msg.sender;
        debt[account] -= _amountBASE;
        debtTotal -= _amountBASE;
        IERC20(BASE).safeTransferFrom(account, address(this), _amountBASE);
        emit Repay(account, _amountBASE);
    }

    ////////////////////
    //// Restricted ////
    ////////////////////

    function setVTOKEN(address _VTOKEN) external onlyOwner {
        require(_VTOKEN != address(0), "!Valid");
        require(VTOKENFirstSet == false, "VTOKEN already set");
        VTOKENFirstSet = true;
        VTOKEN = _VTOKEN;
        TOKENFees(fees).setRewarder(IVTOKEN(_VTOKEN).rewarder());
        emit VTOKENSet(_VTOKEN);
    }

    function setTreasury(address _treasury) external onlyOwner {
        require(_treasury != address(0), "!Valid");
        treasury = _treasury;
        emit TreasurySet(_treasury);
    }
    
}