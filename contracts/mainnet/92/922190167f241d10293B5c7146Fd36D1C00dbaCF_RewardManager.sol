import { Math } from "@openzeppelin/contracts/utils/math/Math.sol";
import { AccessControlEnumerable } from "@openzeppelin/contracts/access/AccessControlEnumerable.sol";
import { ReentrancyGuard } from "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import { IERC20 } from "@openzeppelin/contracts/token/ERC20/IERC20.sol";

import { PRBMathSD59x18 } from "prb-math/contracts/PRBMathSD59x18.sol";

import { IKAE } from "../interfaces/IKAE.sol";
import { IContractRegistry } from "../interfaces/IContractRegistry.sol";
import { IOracle } from "../interfaces/IOracle.sol";
import { IStakingManager } from "../interfaces/IStakingManager.sol";
import { Status, DebtInfo, IBorrowManager } from "../interfaces/IBorrowManager.sol";
import { IRewardManager } from "../interfaces/IRewardManager.sol";


contract RewardManager is IRewardManager, AccessControlEnumerable, ReentrancyGuard
{
  using PRBMathSD59x18 for int256;


  IContractRegistry private constant _REGISTRY = IContractRegistry(0x06Eeb1B35361687f10909902AD4704AC7d09e0E7);
  address private constant _KAE = 0x65Def5029A0e7591e46B38742bFEdd1Fb7b24436;

  uint256 private constant _BASIS_POINT = 10000;
  uint256 private constant _BASIS_POINT_SCALED = 100e18;
  uint256 private constant _BASE_PRICE_IN_USD = 1e18;
  uint256 private constant _BASE_REWARD_CAP = 7500e18;
  uint256 private constant _MAX_REWARD_CAP = 10000e18;

  bytes32 public constant REWARDER_ROLE = keccak256("REWARDER_ROLE");


  struct Config
  {
    uint256 lastPriceInUSD;
    uint256 lastPriceAdjustmentFactor;
  }

  struct Reward
  {
    bool wasDiscounted;
    uint32 immediateClaimTimestamp;
    uint128 amount;
  }

  Config private _config;
  uint256 private _totalRewardClaimed;

  mapping(bytes32 => Reward) private _reward;


  event NewConfig(uint256 price, uint256 factor);

  event Claim(address indexed borrower, bytes32 indexed debtID, uint256 amount);


  constructor ()
  {
    _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);

    _setRoleAdmin(REWARDER_ROLE, DEFAULT_ADMIN_ROLE);
    _setupRole(REWARDER_ROLE, msg.sender);
  }

  function _updateConfig (uint256 priceInUSD) internal
  {
    _config.lastPriceInUSD = priceInUSD;
    _config.lastPriceAdjustmentFactor = (_BASE_PRICE_IN_USD * _BASIS_POINT_SCALED) / priceInUSD;


    emit NewConfig(priceInUSD, _config.lastPriceAdjustmentFactor);
  }

  function updateLastPrice (uint256 priceInUSD) external
  {
    require(hasRole(REWARDER_ROLE, msg.sender), "!rewarder");
    require(priceInUSD > 0, "!valid price");


    _updateConfig(priceInUSD);
  }

  function getConfig () external view returns (Config memory)
  {
    return _config;
  }


  function getTotalRewardClaimed () external view returns (uint256)
  {
    return _totalRewardClaimed;
  }


  function _calcPercentOf (uint256 amount, uint256 percent) internal pure returns (uint256)
  {
    return (amount * percent) / _BASIS_POINT;
  }


  function _adjust (uint256 amount) private view returns (uint256)
  {
    return (amount * _config.lastPriceAdjustmentFactor) / _BASIS_POINT_SCALED;
  }

  function getRewardOf (bytes32 debtID) external view returns (Reward memory)
  {
    Reward memory reward = _reward[debtID];


    return Reward({ wasDiscounted: reward.wasDiscounted, immediateClaimTimestamp: reward.immediateClaimTimestamp, amount: uint128(_adjust(reward.amount)) });
  }


  function _finishClaim (bytes32 debtID, uint256 reward) private
  {
    _totalRewardClaimed += reward;

    IKAE(_KAE).mint(msg.sender, reward);


    emit Claim(msg.sender, debtID, reward);
  }

  function _immediateClaim (bytes32 debtID, Reward memory reward) private
  {
    uint256 amount = _calcPercentOf(reward.amount, 3300);


    _reward[debtID].amount = uint128(reward.amount - amount);
    _reward[debtID].immediateClaimTimestamp = uint32(block.timestamp);


    _finishClaim(debtID, _adjust(amount));
  }


  function calcReleaseDuration (uint256 debtDurationInSecs, uint256 debtStartTimestamp, uint256 debtRepayTimestamp, bool isDiscounted, bool wasDiscounted) public pure returns (uint256 releaseDuration)
  {
    if (debtDurationInSecs < 21 days || (wasDiscounted && !isDiscounted) || (wasDiscounted && debtDurationInSecs < 27 days))
    {
      releaseDuration = 90 days;
    }
    else
    {
      releaseDuration = debtRepayTimestamp >= (debtStartTimestamp + _calcPercentOf(debtDurationInSecs, 9000)) ? 45 days : 90 days;
    }
  }

  function _calcMainClaimable (uint256 reward, uint256 immediateClaimTimestamp, uint256 fullReleaseTimestamp) internal view returns (uint256)
  {
    uint256 releaseRate = reward / (fullReleaseTimestamp - immediateClaimTimestamp);
    uint256 secondsSinceImmediateClaim = block.timestamp - immediateClaimTimestamp;


    return block.timestamp >= fullReleaseTimestamp ? reward : (secondsSinceImmediateClaim * releaseRate);
  }

  function _mainClaim (bytes32 debtID, DebtInfo memory debt, Reward memory reward) private
  {
    uint256 releaseDuration = calcReleaseDuration(debt.durationInSecs, debt.startTimestamp, debt.weightedAvgRepayTimestamp, IStakingManager(_REGISTRY.stakingManager()).isDiscountedForDebts(msg.sender), reward.wasDiscounted);


    _reward[debtID].amount = 0;


    _finishClaim(debtID, _adjust(_calcMainClaimable(reward.amount, reward.immediateClaimTimestamp, reward.immediateClaimTimestamp + releaseDuration)));
  }

  function _isEligibleDebt (uint256 reward, Status status) private pure
  {
    require(status == Status.Repaid && reward > 0, "!eligible");
  }

  function claim (bytes32 debtID) external nonReentrant
  {
    Reward memory reward = _reward[debtID];
    DebtInfo memory debt = IBorrowManager(_REGISTRY.borrowManager()).getDebtInfo(debtID);

    require(msg.sender == debt.borrower, "go borrow");
    _isEligibleDebt(reward.amount, debt.status);


    if (reward.immediateClaimTimestamp > 0)
    {
      _mainClaim(debtID, debt, reward);
    }
    else
    {
      _immediateClaim(debtID, reward);
    }
  }


  function _calcReward (uint256 debtInUSD, uint256 interestRate, uint256 durationInSecs, bool isDiscountedForDebts) private pure returns (uint256)
  {
    int256 w = int256(( durationInSecs * 1e18 ) / 10 days ) - (isDiscountedForDebts ? int256(0.85e18) : int256(1e18));

    int256 m = int256( 1e18 + ((interestRate * 1e18) / _BASIS_POINT) ).pow(w);


    uint256 p = uint256( m.mul(int256(( (interestRate - 100) * debtInUSD ) / _BASIS_POINT)) );


    return Math.min(isDiscountedForDebts ? _MAX_REWARD_CAP : _BASE_REWARD_CAP, p);
  }

  function calcReward (address debtToken, uint256 debt, uint256 interestRate, uint256 durationInSecs, bool isDiscountedForDebts) external view returns (uint256)
  {
    return _calcReward(IOracle(_REGISTRY.oracle()).convertToUSD(debtToken, debt), interestRate, durationInSecs, isDiscountedForDebts);
  }

  function registerDebt (bytes32 debtID, uint256 debtInUSD, uint256 interestRate, uint256 durationInSecs, bool isDiscountedForDebts) external override
  {
    require(hasRole(REWARDER_ROLE, msg.sender), "!rewarder");
    require(_reward[debtID].amount == 0 && _reward[debtID].immediateClaimTimestamp == 0, "reg'd");


    uint256 reward = _calcReward(debtInUSD, interestRate, durationInSecs, isDiscountedForDebts);

    require(reward > 0 && reward < type(uint128).max, "bad reward");


    _reward[debtID] = Reward({ wasDiscounted: isDiscountedForDebts, immediateClaimTimestamp: 0, amount: uint128(reward) });
  }
}

