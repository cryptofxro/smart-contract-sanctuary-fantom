contract HominidCalculator is Ownable, ICalculator {
    using SafeMath for uint256;

    address public quota;

    constructor(address _quota) {
        quota = _quota;
    }

    function capture(address _pair) public view override returns (uint256) {
        address token0 = IUniswapV2Pair(_pair).token0();
        address token1 = IUniswapV2Pair(_pair).token1();
        uint8 decimal0 = IERC20Metadata(token0).decimals();
        uint8 decimal1 = IERC20Metadata(token1).decimals();

        (uint256 r0, uint256 r1, ) = IUniswapV2Pair(_pair).getReserves();

        if (token0 == quota) {
            r1 = r1.mul(10**(18 - decimal1));
            return r0.mul(1e18).div(r1);
        } else if (token1 == quota) {
            r0 = r0.mul(10**(18 - decimal0));
            return r1.mul(1e18).div(r0);
        } else {
            return 0;
        }
    }

    function valuation(address _pair, uint256 _amount) external view override returns (uint256) {
        address token0 = IUniswapV2Pair(_pair).token0();
        address token1 = IUniswapV2Pair(_pair).token1();
        (uint256 r0, uint256 r1, ) = IUniswapV2Pair(_pair).getReserves();
        uint256 totalSupply = IUniswapV2Pair(_pair).totalSupply();

        if (token0 == quota) {
            return r0.mul(2).mul(_amount).div(totalSupply);
        } else if (token1 == quota) {
            return r1.mul(2).mul(_amount).div(totalSupply);
        } else {
            return 0;
        }
    }
}