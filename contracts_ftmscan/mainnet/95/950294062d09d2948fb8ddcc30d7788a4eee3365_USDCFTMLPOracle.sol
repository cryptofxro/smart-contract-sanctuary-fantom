// Chainlink Aggregator

interface IAggregator {
    function latestAnswer() external view returns (int256 answer);
}

contract USDCFTMLPOracle is IOracle {
    IAggregator constant public FTM = IAggregator(0xf4766552D15AE4d256Ad41B6cf2933482B0680dc);
    IAggregator constant public USDCFTMLP = IAggregator(0x41da4a841feE2801d05DE0BC04F60804d8f0D405);

    // Calculates the lastest exchange rate
    // Uses both divide and multiply only for tokens not supported directly by Chainlink, for example MKR/USD
