pragma solidity 0.8.9;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

contract VestingRewards is ReentrancyGuard {

  uint256 public constant NUMBER_OF_EPOCHS   = 21; 
  uint256 public constant EPOCH_DURATION     = 2592000;     // 30 days duration
  uint256 public constant START_DATE         = 1651330800;  // 04/30/2022 15:00
  uint256 public constant EXPECTED_TOTAL     = 14_300_000 ether;
  uint256 public ringPerEpoch;

  address public constant _receiverAddress  = 0x59a51C1506e4768d2BD522097a1c0150f38f49e2;
  address public constant _ringTokenAddress = 0x582423C10c9e83387a96d00A69bA3D11ee47B7b5;

  uint256 public lastClaimedEpoch;

  modifier onlyMultisig() {
    require(msg.sender == _receiverAddress, 'Only Multisig');
    _;
  }

  constructor() {
    ringPerEpoch = (EXPECTED_TOTAL/NUMBER_OF_EPOCHS);
  }

  function claim() public nonReentrant onlyMultisig {
    uint256 balanceToClaim;

    uint256 currentEpoch = getCurrentEpoch();

    if(currentEpoch > NUMBER_OF_EPOCHS){
      lastClaimedEpoch = NUMBER_OF_EPOCHS;
      uint256 ringBalance = balanceContract();
      IERC20(_ringTokenAddress).transfer(_receiverAddress, ringBalance);
      return;
    }

    if(currentEpoch > lastClaimedEpoch) {
      balanceToClaim = (currentEpoch - lastClaimedEpoch) * ringPerEpoch;
    }

    lastClaimedEpoch = currentEpoch;
    if(balanceToClaim > 0){
      IERC20(_ringTokenAddress).transfer(_receiverAddress, balanceToClaim);
    }
  }

  function balanceContract() public view returns (uint256) {
    return IERC20(_ringTokenAddress).balanceOf(address(this));
  }

  function getCurrentEpoch() public view returns(uint256) {

    if (block.timestamp < START_DATE) {
      return 0;
    }

    uint256 numerator = block.timestamp - START_DATE;
    uint256 denominator = EPOCH_DURATION;

    return ((numerator/denominator) + 1);

  }

}

