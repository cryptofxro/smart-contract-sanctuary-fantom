        _rewardsDistributor = rewardsDistributor_;
    }

    modifier onlyRewardsDistributor() {
        require(
            _msgSender() == _rewardsDistributor, 
            "RewardsRecipient::onlyRewardsDistributor: Caller is not RewardsDistributor"
        );
        _;
    }
