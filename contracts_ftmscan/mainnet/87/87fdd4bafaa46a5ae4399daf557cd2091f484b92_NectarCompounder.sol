     where users may directly cash out their rewards with no claims tax.
     */
    function initialize(
        address underlyingToken_,
        address compoundingToken_,
        address distributionPool_,
        address management_,
        address customsManagement_,
        address beacon_
    ) external initializer {
        AccessControlUpgradeable.__AccessControl_init();
        PausableUpgradeable.__Pausable_init();

        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);

        compoundingToken = INECTAR(compoundingToken_);

        underlyingToken = IERC20(underlyingToken_);

        distributionPool = distributionPool_;

        management = management_;

        customsManagement = customsManagement_;

