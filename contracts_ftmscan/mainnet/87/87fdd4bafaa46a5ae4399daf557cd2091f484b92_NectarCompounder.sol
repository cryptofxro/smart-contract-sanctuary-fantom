        uint256 amount = IManagement(management).getRewardAmountOf(msg.sender);
        require(amount > 0, "No rewards to compound");

        IManagement(management).cashoutAllNodeRewards(msg.sender);

        // to fund wrapping
        underlyingToken.transferFrom(distributionPool, address(this), amount);

        // wrap to nectar and send to compounder
        underlyingToken.approve(address(compoundingToken), amount);
        compoundingToken.wrapFor(address(this), amount, msg.sender);
