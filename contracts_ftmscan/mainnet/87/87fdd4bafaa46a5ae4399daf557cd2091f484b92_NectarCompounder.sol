        // ensure that user has enough NECTAR
        require(
            compoundingToken.balanceOf(msg.sender) >= price,
            "Balance too low to create a node"
        );

        // unwrap the NECTAR to COMB and send it to the beacon for fees
        compoundingToken.unwrapFor(msg.sender, price, beacon);
        IManagement(management).createNode(msg.sender, name, multiplier);
